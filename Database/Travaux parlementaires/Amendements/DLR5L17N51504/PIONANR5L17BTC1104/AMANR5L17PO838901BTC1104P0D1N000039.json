{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1104P0D1N000039", "chronotag": "1742233873088", "legislature": "17", "identification": {"numeroLong": "39", "numeroOrdreDepot": "39", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1104P0D1", "texteLegislatifRef": "PIONANR5L17BTC1104", "triAmendement": "caaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaavvs", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA942", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA267763", "PA840817", "PA719138", "PA720976", "PA841931", "PA796078"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;de&#160;Courson,  M.&#160;Bataille, M.&#160;Bruneau, M.&#160;Castellani, M.&#160;Mathiasin, M.&#160;Mazaury et Mme&#160;Youssouffa"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1104.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": "A", "numero": "2", "alineaDesignation": "Alin\u00e9a 2"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p>Supprimer les alin&#x00E9;as 2 &#x00E0; 8.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; supprimer l&#x2019;exclusion des produits de droguerie, de parfumerie et d&#x2019;hygi&#x00E8;ne (DPH) de l&#x2019;encadrement des promotions. En effet, les alin&#x00E9;as 2 &#x00E0; 8 pr&#x00E9;voient de soustraire ces produits de la prolongation&nbsp;du dispositif jusqu&#x2019;en avril 2028, ce qui reviendrait &#x00E0; affaiblir la protection dont b&#x00E9;n&#x00E9;ficient aujourd&#x2019;hui les fournisseurs et industriels, notamment les petites et moyennes entreprises (PME).</p><p style=\"text-align: justify;\">L&#x2019;encadrement actuel a &#x00E9;t&#x00E9; instaur&#x00E9; pour limiter les pressions exerc&#x00E9;es par la grande distribution et emp&#x00EA;cher des pratiques promotionnelles excessives qui obligeraient les industriels &#x00E0; vendre &#x00E0; des conditions pr&#x00E9;judiciables. Bien que ces produits ne soient pas alimentaires, supprimer cette r&#x00E9;gulation sur les DPH risquerait de relancer une course aux rabais d&#x00E9;s&#x00E9;quilibr&#x00E9;e, mettant en p&#x00E9;ril les marges des fabricants et favorisant les importations au d&#x00E9;triment de la production nationale.</p><p style=\"text-align: justify;\">Ainsi, afin de pr&#x00E9;server un cadre &#x00E9;quilibr&#x00E9; pour les relations commerciales et d&#x2019;&#x00E9;viter une mise en concurrence d&#x00E9;loyale des PME face aux grandes enseignes, il est propos&#x00E9; de supprimer les alin&#x00E9;as 2 &#x00E0; 8 de l&#x2019;article&nbsp;1<sup>er</sup>.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-13", "datePublication": "2025-03-17", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-03-17T18:51:07+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1104P0D1N000039?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29206", "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"idDiscussion": "29210", "typePosition": "Dernier"}, "discussionIdentique": {"idDiscussion": "75978", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}