{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B0104P0D1N000010", "chronotag": "1739874518168", "legislature": "17", "identification": {"numeroLong": "AS10", "numeroOrdreDepot": "10", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B0104P0D1", "texteLegislatifRef": "PIONANR5L17B0104", "triAmendement": "eaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaajqi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA722102", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA793270", "PA720066", "PA840713", "PA720154", "PA720022", "PA719404", "PA719756", "PA720446", "PA795962", "PA842147"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Vidal,  M.&#160;Rousset, Mme&#160;Rist, Mme&#160;Delorme&#160;Duret, Mme&#160;Dubr&#233;-Chirat, M.&#160;Lauzzana, M.&#160;Le&#160;Gac, Mme&#160;Le&#160;Nabour, Mme&#160;Liso, Mme&#160;Missoffe et M.&#160;Mongardien"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article unique", "articleDesignationCourte": "ART. UNIQUE", "articleDesignation": "ARTICLE UNIQUE", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0104.asp#D_Article_unique"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "8", "alineaDesignation": "Alin\u00e9a 8"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; l&#x2019;alin&#x00E9;a&nbsp;8, substituer aux mots:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;sup&#x00E9;rieure &#x00E0; trois jours&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">les mots :</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;d&#x00E9;termin&#x00E9;e par d&#x00E9;cret en fonction de l&#x2019;&#x00E9;cart constat&#x00E9;&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; pr&#x00E9;voir que la dur&#x00E9;e du d&#x00E9;lai d&#x2019;information du directeur g&#x00E9;n&#x00E9;ral de l&#x2019;agence r&#x00E9;gionale de sant&#x00E9; (ARS) territorialement comp&#x00E9;tent en cas de non-respect des ratios pr&#x00E9;vus par la pr&#x00E9;sente proposition de loi peut &#x00EA;tre modul&#x00E9;e en fonction de l&#x2019;&#x00E9;cart constat&#x00E9; entre ces ratios et la situation de l&#x2019;unit&#x00E9; de soins concern&#x00E9;e.</p><p style=\"text-align: justify;\">En effet, en l&#x2019;&#x00E9;tat actuel du texte, cette information doit &#x00EA;tre transmise au bout de 3 jours, sans distinction entre une unit&#x00E9; de soins qui serait d&#x00E9;ficitaire d&#x2019;un unique professionnel de sant&#x00E9; ou de plusieurs.</p><p style=\"text-align: justify;\">L&#x2019;impact sur la qualit&#x00E9; des soins et la s&#x00E9;curit&#x00E9; des patients n&#x2019;&#x00E9;tant manifestement pas le m&#x00EA;me en fonction des &#x00E9;carts, il pourrait ainsi &#x00EA;tre opportun de tenir compte de ces derniers afin d&#x2019;envisager un d&#x00E9;lai d&#x2019;information plus rapide en cas de d&#x00E9;ficit important, et moins rapide en cas de d&#x00E9;ficit peu important.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-30", "datePublication": "2024-12-04", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-12-04T11:26:40+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0104P0D1N000010?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "28496", "typePosition": "Premier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}