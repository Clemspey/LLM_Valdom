{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419610B0772P0D1N000007", "chronotag": "1739874718199", "legislature": "17", "identification": {"numeroLong": "CE7", "numeroOrdreDepot": "7", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0772P0D1", "texteLegislatifRef": "PRJLANR5L17B0772", "triAmendement": "buaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaam", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA607395", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Travert"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 6", "articleDesignationCourte": "APR\u00c8S ART. 6", "articleDesignation": "APR\u00c8S L'ARTICLE 6, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0772.asp#D_Article_6"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Par d&#x00E9;rogation &#x00E0; l&#x2019;article L. 424-5 du Code de l&#x2019;urbanisme, les d&#x00E9;cisions de non-opposition relatives &#x00E0; des constructions destin&#x00E9;es aux communications &#x00E9;lectroniques ne peuvent faire l&#x2019;objet d&#x2019;aucun retrait.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">L'article 222 de la loi n&#x00B0; 2018-1021 portant &#x00E9;volution du logement, de l'am&#x00E9;nagement et du num&#x00E9;rique de 2018 (loi dite &#x00AB; ELAN &#x00BB;) a pr&#x00E9;vu une d&#x00E9;rogation au droit de l'autorit&#x00E9; administrative de retirer ses d&#x00E9;cisions d'autorisation, d&#x00E8;s lors que ces d&#x00E9;cisions concernent l'&#x00E9;tablissement d'antennes de t&#x00E9;l&#x00E9;phonie mobile, et ce jusqu'au 31 d&#x00E9;cembre 2022.&nbsp;</p><p style=\"text-align: justify;\">Compte tenu du d&#x00E9;lai moyen de d&#x00E9;ploiement d&#x2019;un site mobile qui se situe autour de 24 mois en France, cet amendement permettra aux op&#x00E9;rateurs de ne pas attendre l'expiration du d&#x00E9;lai de trois mois (pendant lequel le retrait est possible) dans le d&#x00E9;ploiement de leurs r&#x00E9;seaux mobiles et de raccourcir les d&#x00E9;lais de reconstructions des antennes de t&#x00E9;l&#x00E9;phonie mobile &#x00E0; Mayotte.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-01-09", "datePublication": "2025-01-13", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-01-13T23:25:01+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0772P0D1N000007?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "c urbanisme", "divisionCodeLoi": "L424-5"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "74798", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}