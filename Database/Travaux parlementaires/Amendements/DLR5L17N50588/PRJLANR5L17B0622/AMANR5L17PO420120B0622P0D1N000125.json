, M.&#160;Lahais, Mme&#160;Ozenne, Mme&#160;Pochon, M.&#160;Raux, Mme&#160;Regol, M.&#160;Thierry, M.&#160;Ruffin, Mme&#160;Sas, Mme&#160;Sebaihi, Mme&#160;Simonnet, Mme&#160;Taill&#233;-Polian et M.&#160;Tavernier"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 17", "articleDesignationCourte": "ART. 17", "articleDesignation": "ARTICLE 17", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0622.asp#D_Article_17"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "10", "alineaDesignation": "Alin\u00e9a 10"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Compl&#x00E9;ter l&#x2019;alin&#x00E9;a&nbsp;10 par les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;et qui int&#x00E8;grent la course d&#x2019;approche ainsi que le temps li&#x00E9; &#x00E0; l&#x2019;attente d&#x2019;un passager et &#x00E0; l&#x2019;aide &#x00E0; son installation&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement, adopt&#x00E9; en commission lors de la premi&#x00E8;re s&#x00E9;quence de ce PLFSS, vise &#x00E0; pr&#x00E9;ciser, dans les crit&#x00E8;res de la convention, que les montants forfaitaires facturables par trajet doivent inclure non seulement la course d&#x2019;approche, mais &#x00E9;galement le temps d&#x2019;attente du passager et l&#x2019;aide &#x00E0; son installation.</p><p style=\"text-align: justify;\">Il vise ainsi &#x00E0; s&#x2019;assurer que le conventionnement int&#x00E8;gre pleinement tous les frais li&#x00E9;s aux transports&nbsp;sanitaires de patients et prenne en compte l&#x2019;aide humaine n&#x00E9;cessaire lorsque les passagers sont &#x00E0;&nbsp;mobilit&#x00E9; r&#x00E9;duite. Dans un contexte de vieillissement de la population, caract&#x00E9;ris&#x00E9; par le virage&nbsp;ambulatoire, nous allons &#x00EA;tre de plus en plus confront&#x00E9;s &#x00E0; des trajets entre le domicile des patients et&nbsp;les &#x00E9;tablissements de sant&#x00E9;. Nous devons ainsi veiller &#x00E0; ce que cette convention soit le reflet de ces&nbsp;enjeux afin de ne pas accentuer des in&#x00E9;galit&#x00E9;s d&#x00E9;j&#x00E0; pr&#x00E9;sentes.</p><p style=\"text-align: justify;\">Tel est l&#x2019;objet du pr&#x00E9;sent amendement.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-01-22", "datePublication": "2025-01-29", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-01-29T18:13:15+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0622P0D1N000125?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "