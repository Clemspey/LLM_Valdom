{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B0622P0D1N000042", "chronotag": "1739874698189", "legislature": "17", "identification": {"numeroLong": "AS42", "numeroOrdreDepot": "42", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B0622P0D1", "texteLegislatifRef": "PRJLANR5L17B0622", "triAmendement": "bjoaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaabu", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA721474", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA719286", "PA793210"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Viry,  M.&#160;Colombani et M.&#160;Panifous"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 7", "articleDesignationCourte": "ART. 7", "articleDesignation": "ARTICLE 7", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0622.asp#D_Article_7"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "1", "alineaDesignation": "Alin\u00e9a 1"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p>Supprimer les alin&#x00E9;as 1 &#x00E0; 4.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">L&#x2019;article&nbsp;7 pr&#x00E9;voit, entre autres, d&#x2019;assujettir les r&#x00E9;mun&#x00E9;rations des apprentis &#x00E0; la CSG/CRDS au-del&#x00E0; de 50&nbsp;% du SMIC. Cet amendement vise &#x00E0; revenir sur cette disposition qui s&#x2019;apparente &#x00E0; une baisse de pouvoir d&#x2019;achat pour les apprentis, alors m&#x00EA;me que la plupart d&#x2019;entre eux ont des revenus inf&#x00E9;rieurs au SMIC.</p><p style=\"text-align: justify;\">En effet, seuls 5&nbsp;% de la masse salariale des apprentis exc&#x00E8;dent un seuil de r&#x00E9;mun&#x00E9;ration sup&#x00E9;rieur &#x00E0; 79&nbsp;% du SMIC.</p><p style=\"text-align: justify;\">Or non seulement le Gouvernement envisage d&#x2019;assujettir leurs contrats &#x00E0; la CSG/CRDS, mais en plus il pr&#x00E9;voit par voie r&#x00E8;glementaire de relever les cotisations sociales salariales sur les r&#x00E9;mun&#x00E9;rations comprises entre 50 et 79&nbsp;% du SMIC.</p><p style=\"text-align: justify;\">S&#x2019;il est compr&#x00E9;hensible de trouver de nouvelles recettes et de mettre &#x00E0; plat certaines niches socio- fiscales, il n&#x2019;est pas acceptable de mettre &#x00E0; contribution les apprentis, dont les r&#x00E9;mun&#x00E9;rations sont basses, et alors m&#x00EA;me que l&#x2019;apprentissage doit &#x00EA;tre prot&#x00E9;g&#x00E9; comme dispositif d&#x2019;acc&#x00E8;s &#x00E0; l&#x2019;emploi efficace.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-01-21", "datePublication": "2025-01-28", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-01-28T18:11:58+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0622P0D1N000042?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": "s1-4"}, "discussionCommune": {"idDiscussion": "28706", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "75006", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}