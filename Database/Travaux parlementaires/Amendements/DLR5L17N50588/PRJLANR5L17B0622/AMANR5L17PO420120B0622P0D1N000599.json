{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B0622P0D1N000599", "chronotag": "1739874699387", "legislature": "17", "identification": {"numeroLong": "AS599", "numeroOrdreDepot": "599", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B0622P0D1", "texteLegislatifRef": "PRJLANR5L17B0622", "triAmendement": "bjoaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaam", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA642847", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Bazin, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 7", "articleDesignationCourte": "ART. 7", "articleDesignation": "ARTICLE 7", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0622.asp#D_Article_7"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "17", "alineaDesignation": "Alin\u00e9a 17"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;&#x00C0; l&#x2019;alin&#x00E9;a&nbsp;17, substituer &#x00E0; la premi&#x00E8;re occurrence de la date&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;1<sup>er</sup> janvier 2025&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;premier jour du mois qui suit l&#x2019;entr&#x00E9;e en vigueur de la loi n&#x00B0;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; du &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; de financement de la s&#x00E9;curit&#x00E9; sociale pour 2025&nbsp;&#x00BB;.</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;En cons&#x00E9;quence, &#x00E0; la fin du m&#x00EA;me alin&#x00E9;a, substituer &#x00E0; la seconde occurrence de la date&nbsp;:</p><p>&#x00AB;&nbsp;du 1<sup>er</sup> janvier 2025&nbsp;&#x00BB;</p><p>les mots&nbsp;:</p><p>&#x00AB;&nbsp;du premier jour du mois qui suit l&#x2019;entr&#x00E9;e en vigueur de la loi n&#x00B0;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; du &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; de financement de la s&#x00E9;curit&#x00E9; sociale pour 2025&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement propose de d&#x00E9;caler l&#x2019;entr&#x00E9;e en vigueur du pr&#x00E9;sent article afin d&#x2019;emp&#x00EA;cher son application r&#x00E9;troactive.</p><p style=\"text-align: justify;\">En outre, dans le cas de l&#x2019;assujettissement de la part de la r&#x00E9;mun&#x00E9;ration des apprentis exc&#x00E9;dant la moiti&#x00E9; du salaire minimum interprofessionnel de croissance (SMIC) &#x00E0; la contribution sociale g&#x00E9;n&#x00E9;ralis&#x00E9;e (CSG) et &#x00E0; la contribution au remboursement de la dette sociale (CRDS), le pr&#x00E9;sent amendement pr&#x00E9;voit de limiter le champ d&#x2019;application de la mesure aux contrats d&#x2019;apprentissage conclus &#x00E0; compter du premier jour du mois suivant l&#x2019;entr&#x00E9;e en vigueur de la loi de financement de la s&#x00E9;curit&#x00E9; sociale pour 2025, de fa&#x00E7;on &#x00E0; ne pas affecter les conditions de r&#x00E9;mun&#x00E9;ration des apprentis durant l&#x2019;ex&#x00E9;cution de leur contrat.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-01-25", "datePublication": "2025-01-28", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-01-28T18:12:09+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0622P0D1N000599?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}