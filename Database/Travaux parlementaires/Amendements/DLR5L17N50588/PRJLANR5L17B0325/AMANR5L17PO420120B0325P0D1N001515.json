{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B0325P0D1N001515", "chronotag": "1739874580809", "legislature": "17", "identification": {"numeroLong": "AS1515", "numeroOrdreDepot": "1515", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B0325P0D1", "texteLegislatifRef": "PRJLANR5L17B0325", "triAmendement": "biaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaack", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA793094", "groupePolitiqueRef": "PO845425", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Ray"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 6", "articleDesignationCourte": "ART. 6", "articleDesignation": "ARTICLE 6", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0325.asp#D_Article_6"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "10", "alineaDesignation": "Alin\u00e9a 10"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer l&#x2019;alin&#x00E9;a&nbsp;10. </p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise&nbsp;&#x00E0; maintenir le dispositif de D&#x00E9;duction Forfaitaire Sp&#x00E9;cifique (DFS) pour certains salari&#x00E9;s et &#x00E9;viter que la modification de l&#x2019;assiette et du taux de la r&#x00E9;duction g&#x00E9;n&#x00E9;rale ne puisse &#x00EA;tre&nbsp;appliqu&#x00E9;es de mani&#x00E8;re r&#x00E9;troactive &#x00E0; partir du 1<sup>er</sup> janvier 2024.</p><p style=\"text-align: justify;\">La DFS constitue un dispositif fiscal essentiel pour soutenir certaines cat&#x00E9;gories de salari&#x00E9;s qui supportent r&#x00E9;guli&#x00E8;rement des frais professionnels. En appliquant un abattement sur la base des cotisations sociales, la DFS pr&#x00E9;sente des avantages non n&#x00E9;gligeables &#x00E0; la fois en termes de pr&#x00E9;servation du pouvoir d&#x2019;achat et d&#x2019;all&#x00E9;gement des charges salariales.</p><p style=\"text-align: justify;\">La r&#x00E9;duction des pr&#x00E9;l&#x00E8;vements sociaux permet ainsi d&#x2019;augmenter m&#x00E9;caniquement&nbsp;les salaires nets et de simplifier la gestion administrative&nbsp;des frais professionnels.&nbsp;</p><p style=\"text-align: justify;\">Les auteurs de cet amendement, attach&#x00E9;s &#x00E0; la revalorisation du travail et &#x00E0; la simplification administrative, souhaitent ainsi conserver ce dispositif&nbsp;dans son p&#x00E9;rim&#x00E8;tre actuel. La D&#x00E9;duction Forfaitaire Sp&#x00E9;cifique (DFS) a fait ses preuves et l&#x2019;&#x00E9;volution propos&#x00E9;e risque de porter atteinte &#x00E0; l&#x2019;attractivit&#x00E9; de certains secteurs de notre &#x00E9;conomie.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-17", "datePublication": "2024-10-22", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2024-10-22T22:04:25+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0325P0D1N001515?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "0", "divisionCodeLoi": "s10"}, "discussionCommune": {"idDiscussion": "25970", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "71714", "typePosition": "Dernier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}