ogrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "451374", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "451376", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "451378", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "451380", "autorisationEngagement": "-4000000", "creditPaiement": "-4000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "451382", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "451384", "autorisationEngagement": "4000000", "creditPaiement": "4000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; r&#x00E9;tablir un nombre d&#x2019;emplois suffisant dans l&#x2019;enseignement public agricole pour assurer la conformit&#x00E9; avec les grilles horaires r&#x00E9;glementaires et le nouveau programme du baccalaur&#x00E9;at.</p><p style=\"text-align: justify;\">La r&#x00E9;cente r&#x00E9;forme du lyc&#x00E9;e repose en partie sur la vari&#x00E9;t&#x00E9; des enseignements pouvant &#x00EA;tre choisis par les &#x00E9;l&#x00E8;ves. Dans l&#x2019;enseignement agricole public, la baisse continue des ETP,&nbsp;mais aussi des dotations depuis plusieurs ann&#x00E9;es ne permet pas d&#x2019;assurer l&#x2019;offre minimale de 30 000h d&#x2019;enseignements facultatifs, ni le minimum d&#x2019;une option par lyc&#x00E9;e mentionn&#x00E9;s par les r&#x00E9;f&#x00E9;rentiels programmes, y compris pour les mati&#x00E8;res les plus essentielles dans cette formation, comme les math&#x00E9;matiques ou l&#x2019;agronomie.</p><p style=\"text-align: justify;\">L&#x2019;enjeu du r&#x00E9;tablissement de 46 ETP propos&#x00E9; par le pr&#x00E9;sent amendement est donc de pr&#x00E9;parer les &#x00E9;l&#x00E8;ves de l&#x2019;enseignement agricole public &#x00E0; la transformation de nos syst&#x00E8;mes agricoles et alimentaires en leur offrant des possibilit&#x00E9;s vari&#x00E9;es de d&#x00E9;velopper leurs connaissances et leurs savoir-faire,&nbsp;mais aussi plus simplement d&#x2019;assurer dans chaque lyc&#x00E9;e les enseignements de base n&#x00E9;cessaires &#x00E0; la pr&#x00E9;paration du baccalaur&#x00E9;at.</p><p style=\"text-align: justify;\">Cet amendement augmente de 4 millions d&#x2019;euros les autorisations d&#x2019;engagement et les cr&#x00E9;dits de paiement de l&#x2019;action 1 &#x00AB;&nbsp;Mise en &#x0153;uvre de l&#x2019;enseignement dans les &#x00E9;tablissements publics&nbsp;&#x00BB; du programme 143 &#x00AB;&nbsp;Enseignement technique agricole&nbsp;&#x00BB;. Afin d&#x2019;assurer sa recevabilit&#x00E9; financi&#x00E8;re, le pr&#x00E9;l&#x00E8;vement de 4 millions d&#x2019;euros est imput&#x00E9; sur l&#x2019;action 9 &#x00AB;&nbsp;Fonctionnement des &#x00E9;tablissements&nbsp;&#x00BB; du programme 139 &#x00AB;&nbsp;Enseignement priv&#x00E9; du premier et du second degr&#x00E9;&nbsp;&#x00BB;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-16", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2024-10-30T23:57:26+01:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000002?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}