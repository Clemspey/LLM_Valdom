nformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Presse et m\u00e9dias", "programmeRef": "393350", "autorisationEngagement": "2700000", "creditPaiement": "2700000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Livre et industries culturelles", "programmeRef": "393352", "autorisationEngagement": "-2700000", "creditPaiement": "-2700000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement des d&#x00E9;put&#x00E9;s socialistes vise &#x00E0; compenser la baisse&nbsp;des aides &#x00E0; la diffusion de la presse pour 2025.</p><p style=\"text-align: justify;\">Si l&#x2019;aide &#x00E0; l&#x2019;exemplaire pour les titres de presse post&#x00E9;s enregistre une hausse de 2,5 M&#x20AC; (portant l&#x2019;aide &#x00E0; hauteur de 65,5 M&#x20AC;), l&#x2019;aide pour les titres port&#x00E9;s, elle, enregistre une baisse de 2,7 M&#x20AC; (pour seulement 35,2 M&#x20AC;).</p><p style=\"text-align: justify;\">Alors que, dans un contexte de multiplication des canaux de d&#x00E9;sinformation, la presse &#x00E9;crite subit une grave crise (l&#x2019;indicateur 2.1 du bleu budg&#x00E9;taire t&#x00E9;moigne d&#x2019;une chute suppl&#x00E9;mentaire de la diffusion de la presse &#x00E9;crite pour 2025, estim&#x00E9;e &#x00E0; plus de 4&nbsp;%),&nbsp;il nous semble essentiel d&#x2019;apporter un soutien fort au secteur pour d&#x00E9;fendre une information de qualit&#x00E9;.</p><p style=\"text-align: justify;\">Afin de respecter les r&#x00E8;gles budg&#x00E9;taires, cet amendement propose, en AE et CP&nbsp;:</p><p style=\"text-align: justify;\">- d&#x2019;abonder&nbsp;de 2,7 m&#x20AC; l&#x2019;action n&#x00B0;&nbsp;02 du Programme 180&nbsp;;</p><p style=\"text-align: justify;\">- de pr&#x00E9;lever&nbsp;2,7 m&#x20AC; &#x00E0; l&#x2019;action 01 du Programme 334</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-17", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-23T10:52:11+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000022?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}