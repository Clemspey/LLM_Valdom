toucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Formations sup\u00e9rieures et recherche universitaire", "programmeRef": "396558", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie \u00e9tudiante", "programmeRef": "396560", "autorisationEngagement": "77000000", "creditPaiement": "77000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherches scientifiques et technologiques pluridisciplinaires", "programmeRef": "396562", "autorisationEngagement": "-77000000", "creditPaiement": "-77000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche spatiale", "programmeRef": "396564", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche dans les domaines de l'\u00e9nergie, du d\u00e9veloppement et de la mobilit\u00e9 durables", "programmeRef": "396566", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche et enseignement sup\u00e9rieur en mati\u00e8re \u00e9conomique et industrielle", "programmeRef": "396568", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recherche duale (civile et militaire)", "programmeRef": "396570", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement sup\u00e9rieur et recherche agricoles", "programmeRef": "396572", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement du groupe Socialistes et apparent&#x00E9;s vise &#x00E0;&nbsp;r&#x00E9;tablir les cr&#x00E9;dits enlev&#x00E9;s &#x00E0; la vie &#x00E9;tudiante dans ce PLF 2025.</p><p style=\"text-align: justify;\">Alors que tous les voyants sont au rouge en cette rentr&#x00E9;e &#x00E9;tudiante 2024, le Gouvernement supprime 77 millions sur le dos des &#x00E9;tudiants&nbsp;!</p><p style=\"text-align: justify;\">Les r&#x00E9;sultats de la nouvelle &#x00E9;dition du barom&#x00E8;tre IFOP t&#x00E9;moignent d&#x2019;une situation de pr&#x00E9;carit&#x00E9; s&#x00E9;v&#x00E8;rement ancr&#x00E9;e dans la population &#x00E9;tudiante&nbsp;: pr&#x00E9;carit&#x00E9; alimentaire,&nbsp;probl&#x00E8;mes de sant&#x00E9; mentale, isolement, pr&#x00E9;carit&#x00E9; menstruelle, crise de logement sans pr&#x00E9;c&#x00E9;dent ... les sujets sont donc nombreux sur lesquels le Gouvernement doit venir soutenir les &#x00E9;tudiants. Ainsi cette baisse est incompr&#x00E9;hensible.</p><p style=\"text-align: justify;\">Par cet amendement, nous demandons un r&#x00E9;tablissement des 77 m&#x20AC; enlev&#x00E9;s aux &#x00E9;tudiants.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer sa recevabilit&#x00E9; financi&#x00E8;re, cet amendement&nbsp;:</p><p style=\"text-align: justify;\">- abonde, en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement, l&#x2019;action 1, Aides directes, du programme 231 &#x00AB;&nbsp;Vie &#x00E9;tudiante&nbsp;&#x00BB; &#x00E0; hauteur de 77 000&nbsp;000&nbsp;&#x20AC;&nbsp;</p><p style=\"text-align: justify;\">- diminue d&#x2019;autant, en AE et CP, les cr&#x00E9;dits inscrits &#x00E0; l&#x2019;action 2, Agence Nationale de la Recherche, du programme 172 &#x00AB;&nbsp;Recherches scientifiques et technologiques pluridisciplinaires&nbsp;&#x00BB;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-18", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-10-23T21:46:42+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000203?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}