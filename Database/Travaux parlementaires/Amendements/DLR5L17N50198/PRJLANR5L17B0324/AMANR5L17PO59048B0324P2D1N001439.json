t": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Administration p\u00e9nitentiaire", "programmeRef": "419474", "autorisationEngagement": "-810000", "creditPaiement": "-810000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Protection judiciaire de la jeunesse", "programmeRef": "419476", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Acc\u00e8s au droit et \u00e0 la justice", "programmeRef": "419478", "autorisationEngagement": "810000", "creditPaiement": "810000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conduite et pilotage de la politique de la justice", "programmeRef": "419480", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Conseil sup\u00e9rieur de la magistrature", "programmeRef": "419482", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; ce que la totalit&#x00E9; du budget annuel du CIDFF 95, soit 1,2 million d&#x2019;euros, soit couvert par une dotation du minist&#x00E8;re de la Justice, alors que celle-ci en repr&#x00E9;sente un tiers aujourd&#x2019;hui.</p><p style=\"text-align: justify;\">La situation du CIDFF 95 est repr&#x00E9;sentative de ce que connaissent les associations d&#x2019;aide aux victimes, qui d&#x00E9;pendent aujourd&#x2019;hui de financeurs multiples (&#x00C9;tat, collectivit&#x00E9;s, op&#x00E9;rateurs), ce qui fragilise la projection d&#x2019;actions sur une trajectoire pluriannuelle.</p><p style=\"text-align: justify;\">En cons&#x00E9;quence, pour y rem&#x00E9;dier, le pr&#x00E9;sent amendement abonde l&#x2019;action 3 Aide aux victimes du programme 101 Acc&#x00E8;s au droit et &#x00E0; la justice, de 810 000&nbsp;euros en AE et CP, et ponctionne 810 000&nbsp;euros en AE et CP sur l&#x2019;action 1 Garde et contr&#x00F4;le des personnes plac&#x00E9;es sous main de justice du programme Administration p&#x00E9;nitentiaire, dot&#x00E9;e de 3,4 milliards d&#x2019;euros.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-24", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-31T11:04:53+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N001439?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "4", "divisionCodeLoi": {"@xml