isee": {"codeEtat": "B", "codeMissionMinefi": "CB", "libelleMission": "Culture", "missionRef": "2856"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Patrimoines", "programmeRef": "391612", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Cr\u00e9ation", "programmeRef": "391614", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Transmission des savoirs et d\u00e9mocratisation de la culture", "programmeRef": "391616", "autorisationEngagement": "-1350000", "creditPaiement": "-1350000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien aux politiques du minist\u00e8re de la culture", "programmeRef": "391618", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "-1350000", "soldeCP": "-1350000", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement pr&#x00E9;voit de minorer les cr&#x00E9;dits en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement, d&#x2019;un montant de 1 350 000&nbsp;euros, la sous-action <i>&#x00AB;&nbsp;Politiques en faveur des publics en situation sp&#x00E9;cifiques - dans le domaine de la justice&nbsp;&#x00BB;</i> de l&#x2019;action n&#x00B0;&nbsp;2<i> &#x00AB;&nbsp;soutien &#x00E0; la d&#x00E9;mocratisation et &#x00E0; l&#x2019;&#x00E9;ducation artistique et culturelle&nbsp;&#x00BB;</i> du programme 361 <i>&#x00AB;&nbsp;Transmission des savoirs et d&#x00E9;mocratisation de la culture&nbsp;&#x00BB;.</i> <br>Des initiatives r&#x00E9;centes, telles que des visites au Ch&#x00E2;teau de Versailles ou des installations per&#x00E7;ues comme luxueuses en prison, ont provoqu&#x00E9; l&#x2019;indignation des citoyens. Dans un contexte de crise budg&#x00E9;taire, o&#x00F9; les Fran&#x00E7;ais sont confront&#x00E9;s &#x00E0; des choix difficiles et des restrictions dans de nombreux secteurs essentiels, il est inappropri&#x00E9; de financer des activit&#x00E9;s secondaires en prison. En cons&#x00E9;quence, cet amendement propose la suppression d&#x2019;une partie de ces cr&#x00E9;dits, sans toutefois remettre en cause le bien-fond&#x00E9; de la culture en milieu p&#x00E9;nitentiaire, par exemple les biblioth&#x00E8;ques, dans le but d&#x2019;une future r&#x00E9;insertion.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-18", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-22T23:56:43+02:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000126?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "sean