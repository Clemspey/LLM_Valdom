DivisionTexteVise": "/17/textes/0324C.asp#D_Etat_B"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "MA", "libelleMission": "M\u00e9dias, livre et industries culturelles", "missionRef": "2878"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Presse et m\u00e9dias", "programmeRef": "442452", "autorisationEngagement": "12000000", "creditPaiement": "12000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Livre et industries culturelles", "programmeRef": "442454", "autorisationEngagement": "-12000000", "creditPaiement": "-12000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement, travaill&#x00E9; avec la Conf&#x00E9;d&#x00E9;ration&nbsp;nationale des radios associatives ainsi que le Syndicat national de radios libres, vise &#x00E0; r&#x00E9;augmenter les cr&#x00E9;dits consacr&#x00E9;s aux Fonds de soutien &#x00E0; l&#x2019;expression radiophonique. Alors que le budget pour 2024 allou&#x00E9; au FSER &#x00E9;tait de 35M&#x20AC;, le budget pour 2025 pr&#x00E9;voit un montant de 25M&#x20AC;, soit une baisse de plus 10M&#x20AC; ce qui entra&#x00EE;nerait m&#x00E9;caniquement la r&#x00E9;duction de pr&#x00E8;s de 30&nbsp;% du Fonds de Soutien &#x00E0; l&#x2019;Expression Radiophonique. Cette r&#x00E9;duction budg&#x00E9;taire aurait des cons&#x00E9;quences d&#x00E9;vastatrices sur le secteur&nbsp;:&nbsp;suppression de plus de 800 emplois, recul du pluralisme, appauvrissement de la diversit&#x00E9; m&#x00E9;diatique locale et affaiblissement de l&#x2019;offre culturelle. Ainsi, par cette hausse de 12M&#x20AC;, le groupe GDR propose de renforcer le soutien public &#x00E0; ce secteur essentiel pour notre vie d&#x00E9;mocratique.</p><p style=\"text-align: justify;\">L&#x2019;action 06 du programme 180 est abond&#x00E9;e de 12 millions d&#x2019;euros en AE et CP . Ces cr&#x00E9;dits sont pr&#x00E9;lev&#x00E9;s hors titre 2 sur l&#x2019;action 01 du programme 334.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-25", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-06T10:21:30+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N001957?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": "radio FSER"}, "discussionCommune": {"idDiscussion": "28084", "typePosition": "Milieu"}, "discussionIdentique": {"idDiscussion": "73982", "typePosition": "Milieu"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}