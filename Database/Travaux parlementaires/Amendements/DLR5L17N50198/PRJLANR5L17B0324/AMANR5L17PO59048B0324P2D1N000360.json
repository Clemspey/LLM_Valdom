isionTexteVise": "/17/textes/0324C.asp#D_Etat_B"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "VA", "libelleMission": "Coh\u00e9sion des territoires", "missionRef": "2850"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "H\u00e9bergement, parcours vers le logement et insertion des personnes vuln\u00e9rables", "programmeRef": "407732", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Aide \u00e0 l'acc\u00e8s au logement", "programmeRef": "407734", "autorisationEngagement": "10000000", "creditPaiement": "10000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Urbanisme, territoires et am\u00e9lioration de l'habitat", "programmeRef": "407736", "autorisationEngagement": "-10000000", "creditPaiement": "-10000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Impulsion et coordination de la politique d'am\u00e9nagement du territoire", "programmeRef": "407738", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Politique de la ville", "programmeRef": "407740", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Interventions territoriales de l'\u00c9tat", "programmeRef": "407742", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement des d&#x00E9;put&#x00E9;s Socialistes et apparent&#x00E9;s et propos&#x00E9; par l&#x2019;USH vise &#x00E0; supprimer le seuil de non-versement des APL.</p><p style=\"text-align: justify;\">La mesure de contemporan&#x00E9;isation des ressources repr&#x00E9;sente &#x00E0; la fois une modernisation et une &#x00E9;conomie importante. Il serait parfaitement justifi&#x00E9;, dans le cadre d&#x2019;une simplification et d&#x2019;une modernisation du dispositif et pour plus d&#x2019;&#x00E9;quit&#x00E9;, de supprimer une mesure source d&#x2019;incompr&#x00E9;hension et de col&#x00E8;re pour les m&#x00E9;nages modestes qui b&#x00E9;n&#x00E9;ficient th&#x00E9;oriquement d&#x2019;une aide mais celle-ci ne leur est pas vers&#x00E9;e car jug&#x00E9;e trop faible par rapport au co&#x00FB;t de gestion.</p><p style=\"text-align: justify;\">Or, l&#x2019;automatisation des traitements ne justifient plus cet argument aujourd&#x2019;hui. Certes, cette mesure repr&#x00E9;sente un co&#x00FB;t suppl&#x00E9;mentaire mais tr&#x00E8;s largement inf&#x00E9;rieur &#x00E0; l&#x2019;&#x00E9;conomie r&#x00E9;alis&#x00E9;e par la<br>mesure de contemporan&#x00E9;isation. En effet, cette mesure de justice ne repr&#x00E9;senterait annuellement que moins d&#x2019;1&nbsp;% des &#x00E9;conomies r&#x00E9;alis&#x00E9;es depuis que l&#x2019;APL est calcul&#x00E9;e en temps r&#x00E9;el.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer la recevabilit&#x00E9; financi&#x00E8;re du pr&#x00E9;sent amendement il est propos&#x00E9; de majorer de 10M&#x20AC; en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement les cr&#x00E9;dits de l&#x2019;action 01 du programme<br>109 par la minoration &#x00E0; due concurrence de ceux de l&#x2019;action 04 du programme 135.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-23", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-04T19:46:27+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N000360?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "73874", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}