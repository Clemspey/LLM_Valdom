{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B0324P2D1N002994", "chronotag": "1739874561175", "legislature": "17", "identification": {"numeroLong": "II-CF2994", "numeroOrdreDepot": "2994", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B0324P2D1", "texteLegislatifRef": "PRJLANR5L17B0324", "triAmendement": "aeuaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaate", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795786", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;M&#233;nach&#233;, rapporteure"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 59", "articleDesignationCourte": "APR\u00c8S ART. 59", "articleDesignation": "APR\u00c8S L'ARTICLE 59, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0324C.asp#D_Article_59"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "MB", "libelleMission": "Anciens combattants, m\u00e9moire et liens avec la Nation", "missionRef": "2846"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Avant le 30 septembre 2025, le Gouvernement remet au Parlement un rapport &#x00E9;valuant les cons&#x00E9;quences budg&#x00E9;taires pour les ann&#x00E9;es 2025 &#x00E0; 2027 d&#x2019;une indexation annuelle de la valeur du point de pension pr&#x00E9;vu &#x00E0; l&#x2019;article L.&nbsp;125&#x2011;2 du code des pensions militaires d&#x2019;invalidit&#x00E9; et des victimes de guerre sur l&#x2019;indice des prix &#x00E0; la consommation.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; demander un rapport &#x00E9;tudiant de nouvelles modalit&#x00E9;s de calcul du point de la pension militaire d&#x2019;invalidit&#x00E9; (PMI) en fonction de l&#x2019;inflation et non plus de l&#x2019;indice d&#x2019;ensemble des traitements bruts de la fonction publique de l&#x2019;&#x00C9;tat comme c&#x2019;est actuellement le cas.</p><p style=\"text-align: justify;\">La rapporteure sp&#x00E9;ciale appelle, en effet, le Gouvernement &#x00E0; garantir le pouvoir d&#x2019;achat des anciens combattants, qu&#x2019;ils soient atteints d&#x2019;invalidit&#x00E9; ou simplement b&#x00E9;n&#x00E9;ficiaires de l&#x2019;allocation de reconnaissance du combattant, laquelle est index&#x00E9;e sur la valeur du point de la PMI.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-31", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2024-11-01T01:10:52+01:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N002994?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}