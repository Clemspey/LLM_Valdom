dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;L&#x2019;article&nbsp;244 <i>quater</i> B code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts est ainsi modifi&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">1&#x00B0;&nbsp;Les e) &#x00E0; g) sont supprim&#x00E9;s&nbsp;;</p><p style=\"text-align: justify;\">2&#x00B0;&nbsp;Le j) est supprim&#x00E9;.</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;Le I s&#x2019;applique aux d&#x00E9;penses expos&#x00E9;es &#x00E0; compter du 1<sup>er</sup> janvier 2025.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; mettre en &#x0153;uvre une partie des recommandations formul&#x00E9;es par l&#x2019;IGF afin de renforcer l&#x2019;efficience du cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche. Il pr&#x00E9;voit de recentrer l&#x2019;assiette du CIR sur les d&#x00E9;penses de R&amp;amp;D d&#x00E9;finies par le manuel de Frascati&nbsp;&#x2013;&nbsp;en excluant les d&#x00E9;penses li&#x00E9;es aux brevets, &#x00E0; la normalisation et &#x00E0; la veille technologique du champ des d&#x00E9;penses &#x00E9;ligibles.</p><p style=\"text-align: justify;\">Cette mesure permettra d&#x2019;aligner le CIR avec les standards internationaux sans remettre en cause son &#x00E9;conomie g&#x00E9;n&#x00E9;rale et de d&#x00E9;gager une &#x00E9;conomie d&#x2019;environ 250 millions d&#x2019;euros.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-14", "datePublication": "2024-10-18", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-10-18T16:51:31+02:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P1D1N001870?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "CGI", "divisionCodeLoi": "244 quater B"}, "discussionCommune": {"idDiscussion": "25674", "typePosition": "Premier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}