gramme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "451420", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "451422", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "451424", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "451426", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "451428", "autorisationEngagement": "-8000000", "creditPaiement": "-8000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "451430", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Revalorisation du m\u00e9tier d'agents territoriaux sp\u00e9cialis\u00e9s des \u00e9coles maternelles", "programmeRef": "451432", "autorisationEngagement": "8000000", "creditPaiement": "8000000", "action": "cr\u00e9ation", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Depuis la rentr&#x00E9;e 2019, l&#x2019;&#x00E9;cole est obligatoire pour les enfants d&#x00E8;s 3 ans. Cette r&#x00E9;forme a transform&#x00E9; les missions des agents territoriaux sp&#x00E9;cialis&#x00E9;s des &#x00E9;coles maternelles (ATSEM). Dans de nombreuses villes le recrutement des ATSEM est devenue probl&#x00E9;matique.</p><p style=\"text-align: justify;\">Pourtant essentiels au bon fonctionnement des &#x00E9;coles les ATSEM souffrent d&#x2019;un manque de reconnaissance. C&#x2019;est pourquoi, il est propos&#x00E9; d&#x2019;augmenter le budget qui leur est allou&#x00E9;. Une augmentation de salaire cons&#x00E9;quence permettrait de donner de l&#x2019;attractivit&#x00E9; &#x00E0; ce m&#x00E9;tier et donc de pallier les manques que nous connaissons aujourd&#x2019;hui.</p><p style=\"text-align: justify;\">Cet amendement propose une revalorisation de 8 000 000&nbsp;euros soit environ 160&nbsp;euros pour les 50 000 ATSEM.</p><p style=\"text-align: justify;\">L&#x2019;amendement pr&#x00E9;voit donc de pr&#x00E9;lever en AE et CP les cr&#x00E9;dits en hors titre 2 de l&#x2019;action 8 &#x00AB;&nbsp;Logistique, syst&#x00E8;me d&#x2019;information, immobilier&nbsp;&#x00BB; du programme 214 &#x00AB;&nbsp;Soutien de la politique de l&#x2019;&#x00E9;ducation nationale&nbsp;&#x00BB; &#x00E0; hauteur de 8&nbsp;000&nbsp;000&nbsp;&#x20AC; et d&#x2019;abonder une nouvelle ligne budg&#x00E9;taire &#x00AB;&nbsp;Revalorisation du m&#x00E9;tier d&#x2019;ATSEM&nbsp;&#x00BB;&#x00E0; hauteur de 8 000 000 d&#x2019;euros.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-16", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2024-10-30T19:50:17+01:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000008?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}