ionVisee": {"codeEtat": "B", "codeMissionMinefi": "EC", "libelleMission": "Enseignement scolaire", "missionRef": "2868"}}, "corps": {"cartoucheInformatif": "Sous r\u00e9serve de son traitement par les services de l'Assembl\u00e9e nationale et de sa recevabilit\u00e9", "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "519610", "autorisationEngagement": "151400000", "creditPaiement": "151400000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "519612", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "519614", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "519616", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "519618", "autorisationEngagement": "-151400000", "creditPaiement": "-151400000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "519620", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>L&#x2019;&#x00C9;ducation nationale souffre 90% des suppressions de postes publics pr&#x00E9;vue par le projet de loi de finances pour 2025. 3155 enseignants feront d&#x00E9;faut cette ann&#x00E9;e dans le premier degr&#x00E9; public. <br>&nbsp;<br>Alors que le gouvernement &#x00E9;voque la baisse d&#x00E9;mographique pour justifier ces coupes sans pr&#x00E9;c&#x00E9;dents, le premier degr&#x00E9; souffre du manque d&#x2019;effectifs d&#x2019;enseignants qui se r&#x00E9;percute directement sur l&#x2019;encadrement des &#x00E9;l&#x00E8;ves. En 2023, parmi les 22 pays de l&#x2019;UE membres de l&#x2019;OCDE, la France pr&#x00E9;sentait la taille moyenne de classe la plus &#x00E9;lev&#x00E9;e &#x00E0; l&#x2019;&#x00E9;cole &#x00E9;l&#x00E9;mentaire avec 22 &#x00E9;l&#x00E8;ves. <br>&nbsp;<br>Cet amendement de repli propose donc le recrutement de 3155 enseignants du premier degr&#x00E9; public. En estimant le cout annuel d&#x2019;un ETP &#x00E0; 48.000, nous chiffrons le cout de cr&#x00E9;ation des 3155 postes &#x00E0; 151,4 millions d&#x2019;euros.<br>&nbsp;<br>L&#x2019;action 2 du programme 140 est abond&#x00E9;e de 151,4 millions d&#x2019;euros en AE et CP. Ces cr&#x00E9;dits sont pr&#x00E9;lev&#x00E9;s hors titre 2 sur l&#x2019;action 8 du programme 214.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-07", "datePublication": "2025-02-18", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "ET", "libelle": "En traitement"}, "sousEtat": {"code": "R", "libelle": "R"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B0324P2D1N002918?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "C", "divisionCodeLoi": "66"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}