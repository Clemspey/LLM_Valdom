ionVisee": {"codeEtat": "B", "codeMissionMinefi": "EC", "libelleMission": "Enseignement scolaire", "missionRef": "2868"}}, "corps": {"cartoucheInformatif": "Sous r\u00e9serve de son traitement par les services de l'Assembl\u00e9e nationale et de sa recevabilit\u00e9", "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "521054", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "521056", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "521058", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "521060", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "521062", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "521064", "autorisationEngagement": "-56000000", "creditPaiement": "-56000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Revalorisation inconditionnelle des traitements des professeurs de l'enseignement technique agricole public", "programmeRef": "521066", "autorisationEngagement": "56000000", "creditPaiement": "56000000", "action": "cr\u00e9ation", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Ce budget pour 2025 ne pr&#x00E9;voit aucune mesure de revalorisation du point d&#x2019;indice. Par contre, les cr&#x00E9;dits destin&#x00E9;s au &#x00AB;&nbsp;Pacte enseignant&nbsp;&#x00BB; sont maintenus. Seuls 24,4&nbsp;% des enseignants du second degr&#x00E9; public ont sign&#x00E9; le Pacte en 2023&#x2011;2024. Ce dispositif, comme les heures suppl&#x00E9;mentaires, est un facteur d&#x2019;in&#x00E9;galit&#x00E9;s salariales entre les femmes et les hommes. Plus encore, les donn&#x00E9;es de la DEPP montrent que aussi que ce dispositif a servi &#x00E0; financer le priv&#x00E9; qui a largement b&#x00E9;n&#x00E9;fici&#x00E9; des fonds publics du PACTE.&nbsp;</p><p style=\"text-align: justify;\">Nous nous opposons au PACTE depuis sa mise en place en 2023 et pr&#x00F4;nons en faveur d&#x2019;une revalorisation salariale inconditionnelle pour l&#x2019;ensemble des enseignants du primaire et secondaire publics.</p><p style=\"text-align: justify;\"><br>Cet amendement vise &#x00E0; transf&#x00E9;rer les cr&#x00E9;dits suppl&#x00E9;mentaires d&#x00E9;di&#x00E9;s au PACTE dans l&#x2019;enseignement technique et agricole.</p><p style=\"text-align: justify;\">Un nouveau programme &#x00AB;&nbsp;Revalorisation inconditionnelle des traitements des professeurs de l&#x2019;enseignement technique agricole public&nbsp;&#x00BB; est abond&#x00E9; de 56 millions d&#x2019;euros en AE et CP.</p><p style=\"text-align: justify;\">Les cr&#x00E9;dits sont pr&#x00E9;lev&#x00E9;s sur le hors titre 2 du programme 143.</p><p style=\"text-align: justify;\">Il est pr&#x00E9;cis&#x00E9; qu&#x2019;il n&#x2019;est pas souhait&#x00E9; de baisser les cr&#x00E9;dits de ce programme. C&#x2019;est pourquoi le Gouvernement est appel&#x00E9; &#x00E0; lever ce gage.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-07", "datePublication": "2025-02-18", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "ET", "libelle": "En traitement"}, "sousEtat": {"code": "R", "libelle": "R"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B0324P2D1N002924?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "D", "divisionCodeLoi": "18"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}