issionVisee": {"codeEtat": "B", "codeMissionMinefi": "VA", "libelleMission": "Coh\u00e9sion des territoires", "missionRef": "2850"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "H\u00e9bergement, parcours vers le logement et insertion des personnes vuln\u00e9rables", "programmeRef": "388930", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Aide \u00e0 l'acc\u00e8s au logement", "programmeRef": "388932", "autorisationEngagement": "100000", "creditPaiement": "100000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Urbanisme, territoires et am\u00e9lioration de l'habitat", "programmeRef": "388934", "autorisationEngagement": "-100000", "creditPaiement": "-100000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Impulsion et coordination de la politique d'am\u00e9nagement du territoire", "programmeRef": "388936", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Politique de la ville", "programmeRef": "388938", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Interventions territoriales de l'\u00c9tat", "programmeRef": "388940", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Pour les m&#x00E9;nages b&#x00E9;n&#x00E9;ficiaires de l&#x2019;APL, c&#x2019;est la Caf ou la Cmsa qui &#x00E9;tablit l&#x2019;&#x00E9;ligibilit&#x00E9; &#x00E0; la RLS en fonction des revenus et qui transmet au bailleur le montant de la RLS &#x00E0; appliquer, ainsi que le montant d&#x2019;APL correspondant (une fois d&#x00E9;duite la fraction &#x00E0; hauteur de 98% de la RLS du calcul). Pour quelques milliers de m&#x00E9;nages &#x00E9;ligibles &#x00E0; la RLS mais dont l&#x2019;APL est d&#x2019;un faible montant, la d&#x00E9;duction de 98% de la RLS r&#x00E9;duit &#x00E0; z&#x00E9;ro le montant d&#x2019;APL auquel ils ont droit. Dans cette situation complexe, les m&#x00E9;nages ne sont plus consid&#x00E9;r&#x00E9;s comme des b&#x00E9;n&#x00E9;ficiaires de l&#x2019;APL, ce qui a pour cons&#x00E9;quence qu&#x2019;il n&#x2019;y a plus de flux d&#x2019;information transmis par la Caf ou la Cmsa au bailleur les concernant. Pour s&#x2019;assurer que le bailleur soit bien destinataire pour ces m&#x00E9;nages de l&#x2019;information concernant la RLS &#x00E0; appliquer, nous proposons de maintenir une APL d&#x2019;un montant d&#x2019;un euro pour ces m&#x00E9;nages, ce qui garantirait qu&#x2019;ils restent bien identifi&#x00E9;s et ne se retrouvent pas l&#x00E9;s&#x00E9;s avec une RLS d&#x00E9;duite du calcul d&#x2019;APL mais pas appliqu&#x00E9;e par le bailleur, faute d&#x2019;information transmise par la Caf ou la Cmsa. Cette mesure serait indolore budg&#x00E9;tairement, ce que traduit notre amendement qui propose d'abonder les cre&#x0301;dits de l&#x2019;action 01 &#x201C;Aides personnelles&#x201D; du programme 109 &#x201D;Aide a&#x0300; l'acce&#x0300;s au logement&#x201D; d'une montant de 100 000 euros. Cette augmentation est compense&#x0301;e par une diminution &#x00E0; due concurrence des cre&#x0301;dits de l&#x2019;action 04 &#x201C; Re&#x0301;glementation, politique technique et qualite&#x0301; de la construction&#x201D; du programme 135 &#x201D;Urbanisme, territoires et ame&#x0301;lioration de l'habitat&#x201D;. Cette re&#x0301;duction a pour but de se conformer aux exigences de la loi organique relative aux lois de finances qui oblige, lorsque l&#x2019;auteur d&#x2019;un amendement souhaite augmenter les cre&#x0301;dits d&#x2019;un programme, a&#x0300; diminuer les cre&#x0301;dits d&#x2019;un autre programme d&#x2019;autant. Il n&#x2019;est pas envisage&#x0301; de restreindre les moyens alloue&#x0301;s a&#x0300; l&#x2019;ame&#x0301;lioration de l'habitat.</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-18", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2024-10-22T19:38:53+02:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0324P2D1N000114?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "divisionCodeLoi": "RLS"}, "discussionCommune": {"idDiscussion": "26116", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}