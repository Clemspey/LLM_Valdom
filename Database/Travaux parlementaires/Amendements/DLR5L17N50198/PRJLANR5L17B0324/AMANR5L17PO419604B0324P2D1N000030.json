missionVisee": {"codeEtat": "B", "codeMissionMinefi": "CB", "libelleMission": "Culture", "missionRef": "2856"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Patrimoines", "programmeRef": "385486", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Cr\u00e9ation", "programmeRef": "385488", "autorisationEngagement": "-10000", "creditPaiement": "-10000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Transmission des savoirs et d\u00e9mocratisation de la culture", "programmeRef": "385490", "autorisationEngagement": "10000", "creditPaiement": "10000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien aux politiques du minist\u00e8re de la culture", "programmeRef": "385492", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement a pour objectif de pre&#x0301;figurer la transformation de la SAS Pass culture en ope&#x0301;rateur de l&#x2019;E&#x0301;tat. En effet, la gestion du pass culture est actuellement confie&#x0301;e a&#x0300; une socie&#x0301;te&#x0301; prive&#x0301;e charge&#x0301;e d&#x2019;une mission d&#x2019;inte&#x0301;re&#x0302;t ge&#x0301;ne&#x0301;ral. Ce sche&#x0301;ma ne semble pas efficient et rien ne justifie, au regard des financements 100&nbsp;% publics (contrairement a&#x0300; l&#x2019;objectif initial) que cela ne soit pas un ope&#x0301;rateur de l&#x2019;E&#x0301;tat qui ge&#x0300;re le pass culture. Cette demande est issue des travaux de la Cour des comptes dans leur rapport sur le Pass culture publie&#x0301; en mai 2023. Ce me&#x0302;me rapport pointait de nombreux dysfonctionnement, notamment (et une nouvelle fois&nbsp;!) dans le recours excessif aux consultants&nbsp;exte&#x0301;rieurs. Le Gouvernement doit absolument prendre en compte les remarques de la Cour au risque de fragiliser cette politique publique, de&#x0301;sormais incontournable.</p><p style=\"text-align: justify;\">Afin de se conformer aux re&#x0300;gles de la LOLF, l&#x2019;amendement est ainsi re&#x0301;dige&#x0301;&nbsp;: L&#x2019;action 02 du programme 361 est abonde&#x0301;e de 10 000&nbsp;euros en AE et CP Ces cre&#x0301;dits sont pre&#x0301;leve&#x0301;s hors titre 2 sur l&#x2019;action 01 du programme 131</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-17", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000030?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}