onTexteVise": "/17/textes/0324C.asp#D_Etat_B"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "VA", "libelleMission": "Coh\u00e9sion des territoires", "missionRef": "2850"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "H\u00e9bergement, parcours vers le logement et insertion des personnes vuln\u00e9rables", "programmeRef": "407786", "autorisationEngagement": "7000000", "creditPaiement": "7000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Aide \u00e0 l'acc\u00e8s au logement", "programmeRef": "407788", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Urbanisme, territoires et am\u00e9lioration de l'habitat", "programmeRef": "407790", "autorisationEngagement": "-7000000", "creditPaiement": "-7000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Impulsion et coordination de la politique d'am\u00e9nagement du territoire", "programmeRef": "407792", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Politique de la ville", "programmeRef": "407794", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Interventions territoriales de l'\u00c9tat", "programmeRef": "407796", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement des d&#x00E9;put&#x00E9;s Socialistes et apparent&#x00E9;s et propos&#x00E9; par la fondation Abb&#x00E9; Pierre vise &#x00E0; majorer de 7M&#x20AC; les cr&#x00E9;dits d&#x00E9;volus aux maraudes sociales afin d&#x2019;assurer un meilleur accompagnement des personnes sans-abri.</p><p style=\"text-align: justify;\">L&#x2019;enqu&#x00EA;te nationale 2022 sur les maraudes de la F&#x00E9;d&#x00E9;ration nationale des Samu sociaux fait le constat partag&#x00E9; que le sans-abrisme ne recule pas, mais encore que &#x00AB;&nbsp;les probl&#x00E9;matiques des personnes &#x00E0; la rue sont de plus en plus profondes, et imbriqu&#x00E9;es entre elles&nbsp;&#x00BB;, ce qui n&#x00E9;cessit&#x00E9; de renforcer les &#x00E9;quipes des maraudes qui secourent, accompagnement et orientent les personnes &#x00E0; la rue.</p><p style=\"text-align: justify;\">Il faut pour cela accro&#x00EE;tre les &#x00E9;quipes sur le terrain pour am&#x00E9;liorer la couverture territoriale sur chaque d&#x00E9;partement&nbsp;; renforcer l&#x2019;&#x00E9;quipement technique des &#x00E9;quipes, notamment num&#x00E9;rique&nbsp;;<br>disposer d&#x2019;&#x00E9;quipes pluridisciplinaires pour faciliter le lien avec d&#x2019;autres acteurs (sant&#x00E9;, logement&#x2026;) et orienter les personnes vers le droit commun.</p><p style=\"text-align: justify;\">Afin d&#x2019;assurer la recevabilit&#x00E9; du pr&#x00E9;sent amendement il est donc propos&#x00E9; de majorer de 7M&#x20AC; en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement les cr&#x00E9;dits de l&#x2019;action 12 du programme 177<br>par la minoration &#x00E0; due concurrence des cr&#x00E9;dits de l&#x2019;action 04 du programme 135.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-23", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Retir\u00e9"}}, "dateSort": "2024-11-04T18:58:58+01:00", "sort": "Retir\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N000361?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "1", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}