el": "false", "urlDivisionTexteVise": "/17/textes/0324A.asp#D_Article_13"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; la deuxi&#x00E8;me phrase du premier alin&#x00E9;a du I de l&#x2019;article&nbsp;244&nbsp;<i>quater</i>&nbsp;B du code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts, le montant&nbsp;: &#x00AB;&nbsp;100&nbsp;millions d'euros&#x00BB; est remplac&#x00E9; par le montant&nbsp;: &#x00AB;&nbsp;75&nbsp;millions d'euros&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Actuellement le taux du cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche est de 30&nbsp;% pour la fraction des d&#x00E9;penses de recherche inf&#x00E9;rieure ou &#x00E9;gale &#x00E0; 100 millions d&#x2019;euros et de 5&nbsp;% pour la fraction des d&#x00E9;penses de recherche sup&#x00E9;rieure &#x00E0; ce montant.</p><p style=\"text-align: justify;\">Dans un objectif de r&#x00E9;duction des co&#x00FB;ts du dispositif, cet amendement propose&nbsp;d&#x2019;abaisser le taux de la premi&#x00E8;re tranche du cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche de 100 &#x00E0; 75 M&#x20AC;. Les taux particuliers pour les DROM et la Corse restent inchang&#x00E9;s.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-19", "datePublication": "2024-11-06", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-11-06T22:46:35+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B0324P1D1N002643?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS28627", "article99": "false", "loiReference": {"codeLoi": "CGI", "divisionCodeLoi": "244 quater B"}, "discussionCommune": {"idDiscussion": "26586", "typePosition": "Milieu"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}