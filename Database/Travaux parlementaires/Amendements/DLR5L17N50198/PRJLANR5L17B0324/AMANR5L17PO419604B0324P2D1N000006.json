isteProgrammes": {"programme": [{"libelle": "Patrimoines", "programmeRef": "385058", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Cr\u00e9ation", "programmeRef": "385060", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Transmission des savoirs et d\u00e9mocratisation de la culture", "programmeRef": "385062", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien aux politiques du minist\u00e8re de la culture", "programmeRef": "385064", "autorisationEngagement": "-3500000", "creditPaiement": "-3500000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Fonds de soutien aux monuments historiques non d\u00e9tenus par l\u2019\u00c9tat", "programmeRef": "385066", "autorisationEngagement": "3500000", "creditPaiement": "3500000", "action": "cr\u00e9ation", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement vise &#x00E0; cr&#x00E9;er un fonds de 3,5 millions d&#x2019;euros pour les monuments&nbsp;historiques non d&#x00E9;tenus par l&#x2019;&#x00C9;tat. Le montant de ces cr&#x00E9;dits seront consacr&#x00E9;s aux d&#x00E9;penses de&nbsp;d&#x2019;entretien et de restauration des b&#x00E2;timents. Il s&#x2019;agit d&#x2019;apporter une aide plus cons&#x00E9;quente aux&nbsp;collectivit&#x00E9;s territoriales et propri&#x00E9;taires priv&#x00E9;s d&#x00E9;tenteurs de monuments historiques.</p><p style=\"text-align: justify;\">Il convient donc de transf&#x00E9;rer 3,5 millions d&#x2019;euros des autorisations d&#x2019;engagements et des cr&#x00E9;dits de&nbsp;paiement pour le programme &#x00AB;&nbsp;Fonds de soutien aux monuments historiques non d&#x00E9;tenus par&nbsp;l&#x2019;&#x00C9;tat&nbsp;&#x00BB; au d&#x00E9;triment de l&#x2019;action 07 &#x00AB;&nbsp;Fonctions de soutien du minist&#x00E8;re&nbsp;&#x00BB; au sein du programme 224&nbsp;&#x00AB;&nbsp;Soutien aux politiques du minist&#x00E8;re de la culture&nbsp;&#x00BB;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-16", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Non soutenu"}}, "dateSort": "2024-10-23T10:11:55+02:00", "sort": "Non soutenu"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419604B0324P2D1N000006?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil"