{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59047B0324P2D1N000070", "chronotag": "1739874518133", "legislature": "17", "identification": {"numeroLong": "II-AE70", "numeroOrdreDepot": "70", "prefixeOrganeExamen": "CION_AFETR", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59047B0324P2D1", "texteLegislatifRef": "PRJLANR5L17B0324", "triAmendement": "iaiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaai", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA795900", "groupePolitiqueRef": "PO845401", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Hamelet"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "\u00c9TAT G - LISTE DES OBJECTIFS ET DES INDICATEURS DE PERFORMANCE", "articleDesignationCourte": "ART. 45", "articleDesignation": "ARTICLE 45", "type": "ANNEXE", "avant_A_Apres": "A", "divisionRattachee": "ARTICLE 45", "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0324C.asp#D_Etat_G__Liste_des_objectifs_et_des_ind"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "AQ", "libelleMission": "Audiovisuel public", "missionRef": "2848"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "243", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 243"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;243, ins&#x00E9;rer l&#x2019;alin&#x00E9;a suivant&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Part des ressources propres dans les ressources totales&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet indicateur de performance a vocation &#x00E0; indiquer la part des ressources propres de chaque m&#x00E9;dias dans la part des ressources totales de ces m&#x00E9;dias.&nbsp;</p><p style=\"text-align: justify;\">Selon les donn&#x00E9;es fournies par le&nbsp;Projet de Contrat d&#x2019;Objectifs et de Moyens 2024&#x2011;2028 entre l&#x2019;&#x00C9;tat et France M&#x00E9;dias Monde, on observe&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">- une augmentation des ressources propres du groupe (publicit&#x00E9; / parrainage, diversification, &#x00E9;ditions musicales, subventions bailleurs de fonds internationaux, financement AFD) de 6&nbsp;% sur la p&#x00E9;riode 2022&#x2011;2028 et une augmentation de 17&nbsp;% des dotations publiques sur la p&#x00E9;riode&nbsp;;&nbsp;</p><p style=\"text-align: justify;\">-&nbsp;une baisse de la part des ressources propres du groupe sur ses ressources totales&nbsp;: de 5,3&nbsp;% en 2022 &#x00E0; 4,8&nbsp;% en 2028.&nbsp;</p><p style=\"text-align: justify;\">Dans un imp&#x00E9;ratif de bonne gestion et d&#x2019;efficience des deniers publics, il convient de veiller&nbsp;&#x00E0; &#x00E9;viter un d&#x00E9;crochage trop important entre les ressources propres que FMM arrive &#x00E0; d&#x00E9;gager et les dotation publique que le groupe re&#x00E7;oit au titre de sa mission de service public.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-26", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-30T12:26:18+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59047B0324P2D1N000070?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}