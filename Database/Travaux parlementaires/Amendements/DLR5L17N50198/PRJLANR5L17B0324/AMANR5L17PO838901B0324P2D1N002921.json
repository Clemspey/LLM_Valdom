onVisee": {"codeEtat": "B", "codeMissionMinefi": "EC", "libelleMission": "Enseignement scolaire", "missionRef": "2868"}}, "corps": {"cartoucheInformatif": "Sous r\u00e9serve de son traitement par les services de l'Assembl\u00e9e nationale et de sa recevabilit\u00e9", "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Enseignement scolaire public du premier degr\u00e9", "programmeRef": "520466", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement scolaire public du second degr\u00e9", "programmeRef": "520468", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Vie de l'\u00e9l\u00e8ve", "programmeRef": "520470", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement priv\u00e9 du premier et du second degr\u00e9s", "programmeRef": "520472", "autorisationEngagement": "-200000000", "creditPaiement": "-200000000", "action": "modification", "lignesCredits": {"ligneCredit": {"id": "14132", "libelle": "dont titre 2", "autorisationEngagement": "-200000000", "creditPaiement": "-200000000", "action": "modification"}}}, {"libelle": "Soutien de la politique de l'\u00e9ducation nationale", "programmeRef": "520474", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Enseignement technique agricole", "programmeRef": "520476", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Recrutement d'Intervenants en Langue Maternelle", "programmeRef": "520478", "autorisationEngagement": "200000000", "creditPaiement": "200000000", "action": "cr\u00e9ation", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "0", "soldeCP": "0", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">La barri&#x00E8;re de la langue dans les territoires r&#x00E9;gis par l&#x2019;article&nbsp;73 de la Constitution peuvent souvent &#x00EA;tre des obstacles dans la r&#x00E9;ussite scolaire des enfants. Ainsi, depuis les ann&#x00E9;es 1997/1998, des Intervenants en Langue Maternelle (ILM) ont &#x00E9;t&#x00E9; recrut&#x00E9;s pour permettre aux enfants guyanais n&#x2019;ayant pas pour langue premi&#x00E8;re le fran&#x00E7;ais de mieux s&#x2019;adapter &#x00E0; l&#x2019;&#x00E9;cole. Or, la derni&#x00E8;re vague de formation s&#x2019;est arr&#x00EA;t&#x00E9;e l&#x2019;ann&#x00E9;e derni&#x00E8;re. Au total, les ILM sont aujourd&#x2019;hui au nombre de 80 mais la continuit&#x00E9; de ces intervenants n&#x2019;est pas assur&#x00E9;e d&#x00E8;s lors que la formation s&#x2019;arr&#x00EA;te brusquement. En 2017, il &#x00E9;tait d&#x00E9;j&#x00E0; demand&#x00E9; d&#x2019;augmenter le nombre d&#x2019;ILM &#x00E0; 400 pour combler les manquements de l&#x2019;&#x00E9;ducation et 80 ILM sont venus combler les rangs. Il faudrait toutefois un plan pluriannuel avec au minimum 80 ILM par an sur trois ans pour que toutes les &#x00E9;coles de l&#x2019;Ouest et de l&#x2019;Est dans les &#x00E9;coles bilingues soient pourvues en personnel.</p><p style=\"text-align: justify;\">Afin de se conformer aux r&#x00E8;gles de la LOLF, l&#x2019;amendement est ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">Il est cr&#x00E9;&#x00E9; un nouveau programme intitul&#x00E9; &#x00AB;&nbsp;Recrutement d&#x2019;Intervenants en Langue Maternelle&nbsp;&#x00BB; abond&#x00E9; en AE et CP de 200 millions d&#x2019;euros.</p><p style=\"text-align: justify;\">Les cr&#x00E9;dits sont pr&#x00E9;lev&#x00E9;s sur le titre 2 sur l&#x2019;action 03 du programme 139.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-07", "datePublication": "2025-02-18", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "ET", "libelle": "En traitement"}, "sousEtat": {"code": "R", "libelle": "R"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B0324P2D1N002921?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "C", "divisionCodeLoi": "50"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}