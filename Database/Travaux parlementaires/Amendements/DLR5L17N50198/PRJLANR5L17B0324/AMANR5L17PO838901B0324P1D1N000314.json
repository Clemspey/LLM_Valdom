{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901B0324P1D1N000314", "chronotag": "1739874618797", "legislature": "17", "identification": {"numeroLong": "I-314", "numeroOrdreDepot": "314", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901B0324P1D1", "texteLegislatifRef": "PRJLANR5L17B0324", "triAmendement": "coaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaeubi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794982", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA719338", "PA721916", "PA794486", "PA719550", "PA722102", "PA794330", "PA722134", "PA721750"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Delpech,  Mme&#160;Melchior, Mme&#160;Pouzyreff, Mme&#160;Spillebout, Mme&#160;Liliana&#160;Tanguy, Mme&#160;Vidal, M.&#160;Brosse, M.&#160;Fi&#233;vet et Mme&#160;Calvez"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 13", "articleDesignationCourte": "APR\u00c8S ART. 13", "articleDesignation": "APR\u00c8S L'ARTICLE 13, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0324A.asp#D_Article_13"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Le j du&nbsp;II&nbsp;de l&#x2019;article&nbsp;244 <i>quater</i> B du code g&#x00E9;n&#x00E9;ral des imp&#x00F4;ts est abrog&#x00E9;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement, travaill&#x00E9; avec France Digital, vise &#x00E0; exclure la veille technologique des d&#x00E9;penses &#x00E9;ligibles au cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche (CIR). Il s&#x2019;agit des d&#x00E9;penses li&#x00E9;es &#x00E0; l&#x2019;abonnement &#x00E0; des revues scientifiques, &#x00E0; l&#x2019;achat d&#x2019;&#x00E9;tudes technologiques ou &#x00E0; la participation &#x00E0; des congr&#x00E8;s scientifiques pour suivre les avanc&#x00E9;es de l&#x2019;&#x00E9;tat de l&#x2019;art li&#x00E9;es &#x00E0; des travaux de recherche. Les activit&#x00E9;s de veille technologique ne font pas partie des activit&#x00E9;s de R&amp;amp;D en tant que telles, mais sont &#x00E9;ligibles au CIR dans la limite de 60 000 euros par an, d&#x00E8;s lors qu&#x2019;elles sont concomitantes &#x00E0; la r&#x00E9;alisation d&#x2019;op&#x00E9;rations de R&amp;amp;D.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-16", "datePublication": "2024-10-25", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "RT", "libelle": "Retir\u00e9"}, "sousEtat": {"code": "RT", "libelle": "Retir\u00e9 apr\u00e8s publication"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime":