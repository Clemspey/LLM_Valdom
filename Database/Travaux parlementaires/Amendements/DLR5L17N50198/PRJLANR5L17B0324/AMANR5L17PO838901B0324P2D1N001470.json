eur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Inclusion sociale et protection des personnes", "programmeRef": "497352", "autorisationEngagement": "0", "creditPaiement": "13000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Handicap et d\u00e9pendance", "programmeRef": "497354", "autorisationEngagement": "13000000", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "\u00c9galit\u00e9 entre les femmes et les hommes", "programmeRef": "497356", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "13000000", "soldeCP": "13000000", "cpEgalAe": "false"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Une mesure budg&#x00E9;taire de 13 M&#x20AC; au sein du PLF 2024 pr&#x00E9;voyait de faciliter le cumul de l&#x2019;allocation aux adultes handicap&#x00E9;s (AAH) et d&#x2019;une activit&#x00E9; professionnelle, notamment pour ceux reprenant une activit&#x00E9; en milieu ordinaire au-del&#x00E0; d&#x2019;un mi-temps. Pendant deux ans, le b&#x00E9;n&#x00E9;fice de la restriction substantielle et durable pour l&#x2019;acc&#x00E8;s &#x00E0; l&#x2019;emploi (RSDAE) pour les b&#x00E9;n&#x00E9;ficiaires de l&#x2019;AAH-2 en activit&#x00E9; devait &#x00EA;tre maintenu au moment du renouvellement de leurs droits. Cette disposition n'a malheureusement pas fait l'objet d'une mise en &#x0153;uvre et a &#x00E9;t&#x00E9; annul&#x00E9;e au printemps dernier. Il convient de la r&#x00E9;tablir pour le b&#x00E9;n&#x00E9;fice d'un acc&#x00E8;s &#x00E0; l'emploi facilit&#x00E9; des b&#x00E9;n&#x00E9;ficiaires de l'AAH qui cumulent AAH et activit&#x00E9; professionnelle.</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-05", "datePublication": "2025-02-18", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "ET", "libelle": "En traitement"}, "sousEtat": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901B0324P2D1N001470?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "A", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}