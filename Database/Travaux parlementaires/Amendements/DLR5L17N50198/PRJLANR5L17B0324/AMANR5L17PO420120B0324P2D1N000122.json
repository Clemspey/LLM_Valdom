nTexteVise": "/17/textes/0324C.asp#D_Etat_B"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "TB", "libelleMission": "Travail, emploi et administration des minist\u00e8res sociaux", "missionRef": "2904"}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositifAmdtCreditPLF": {"listeProgrammes": {"programme": [{"libelle": "Acc\u00e8s et retour \u00e0 l'emploi", "programmeRef": "489470", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Accompagnement des mutations \u00e9conomiques et d\u00e9veloppement de l'emploi", "programmeRef": "489472", "autorisationEngagement": "-40000000", "creditPaiement": "-40000000", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Am\u00e9lioration de la qualit\u00e9 de l'emploi et des relations du travail", "programmeRef": "489474", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, {"libelle": "Soutien des minist\u00e8res sociaux", "programmeRef": "489476", "autorisationEngagement": "0", "creditPaiement": "0", "action": "modification", "lignesCredits": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}]}, "soldeAE": "-40000000", "soldeCP": "-40000000", "cpEgalAe": "true"}, "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement pr&#x00E9;voit de minorer les cr&#x00E9;dits, en autorisations d&#x2019;engagement et en cr&#x00E9;dits de paiement, d&#x2019;un montant de 40 000 000 d&#x2019;euros pour l&#x2019;action n&#x00B0;&nbsp;02&nbsp;: &#x00AB;&nbsp;Formation professionnelle des demandeurs d&#x2019;emploi&nbsp;&#x00BB; du programme n&#x00B0;&nbsp;103&nbsp;: &#x00AB;&nbsp;Accompagnement des mutations &#x00E9;conomiques et d&#x00E9;veloppement de l&#x2019;emploi&nbsp;&#x00BB;.&nbsp;</p><p style=\"text-align: justify;\">La sous-action &#x00AB;&nbsp;02.01&nbsp;&#x2013;&nbsp;Formation des demandeurs d&#x2019;emploi aux m&#x00E9;tiers recrutant sur le march&#x00E9; du travail&nbsp;&#x00BB; porte les d&#x00E9;penses d&#x2019;interventions du PIC&nbsp;auquel se voient affect&#x00E9;s les cr&#x00E9;dits de la sous-action &#x00AB;&nbsp;5.01&nbsp;&#x2013;&nbsp;Actions pour lever les freins p&#x00E9;riph&#x00E9;riques &#x00E0; l&#x2019;emploi&nbsp;&#x00BB; portant, contrairement &#x00E0; ce que sugg&#x00E8;re son intitul&#x00E9;, plus de 40 000 000 d&#x2019;euros de d&#x00E9;penses pour&nbsp;l&#x2019;insertion professionnelle pour les r&#x00E9;fugi&#x00E9;s (15 millions d&#x2019;euros en AE et 18 millions d&#x2019;euros en CP en 2024), le programme H&#x00E9;bergement orientation parcours vers l&#x2019;emploi (HOPE) pour les r&#x00E9;fugi&#x00E9;s politiques &#x00E0; hauteur de 10 millions d&#x2019;euros ou encore le programme AGIR pour un accompagnement global et individualis&#x00E9; des r&#x00E9;fugi&#x00E9;s (9,5 millions d&#x2019;euros en AE et 8,2 millions d&#x2019;euros en CP en 2024), soit un total de plus de plus de 40 millions d&#x2019;euros en faveur d&#x2019;un public cible sp&#x00E9;cifique qui n&#x2019;&#x00E9;tait pas pr&#x00E9;vus dans le PIC initial. Le Rassemblement National refuse que les cr&#x00E9;dits de cette sous-action soient affect&#x00E9;s de mani&#x00E8;re d&#x00E9;tourn&#x00E9;e pour financer des programmes qui s&#x2019;&#x00E9;loignent des objectifs initiaux du PIC.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-01", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-11-06T22:14:46+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0324P2D1N000122?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"idDiscussion": "28116", "typePosition": "Dernier"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}