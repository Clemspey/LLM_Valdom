{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59048B0324P2D1N000120", "chronotag": "1739874556528", "legislature": "17", "identification": {"numeroLong": "II-CF120", "numeroOrdreDepot": "120", "prefixeOrganeExamen": "CION_FIN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59048B0324P2D1", "texteLegislatifRef": "PRJLANR5L17B0324", "triAmendement": "bjooaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaab", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794094", "groupePolitiqueRef": "PO845419", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Bouloux"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "\u00c9TAT G - LISTE DES OBJECTIFS ET DES INDICATEURS DE PERFORMANCE", "articleDesignationCourte": "ART. 45", "articleDesignation": "ARTICLE 45", "type": "ANNEXE", "avant_A_Apres": "A", "divisionRattachee": "ARTICLE 45", "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0324C.asp#D_Etat_G__Liste_des_objectifs_et_des_ind"}, "missionVisee": {"codeEtat": "B", "codeMissionMinefi": "RA", "libelleMission": "Recherche et enseignement sup\u00e9rieur", "missionRef": "2886"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "1291", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 1291"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;1291, ins&#x00E9;rer l&#x2019;alin&#x00E9;a suivant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Mesure de l&#x2019;impact environnemental du cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche (CIR)&nbsp;&#x00BB;.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement cr&#x00E9;e un indicateur &#x00E9;valuant l&#x2019;effet environnemental du cr&#x00E9;dit d&#x2019;imp&#x00F4;t recherche (CIR). Il pourra&nbsp;mesurer l&#x2019;incitation&nbsp;&#x00E0; la recherche priv&#x00E9;e&nbsp;dans les domaines de&nbsp;la&nbsp;mobilit&#x00E9; douce, de l&#x2019;efficience &#x00E9;nerg&#x00E9;tique ou de la sobri&#x00E9;t&#x00E9; des usages par exemple.</p><p style=\"text-align: justify;\">Cet amendement permet de&nbsp;compl&#x00E9;ter l&#x2019;information du Parlement. Il r&#x00E9;pond ainsi &#x00E0; la n&#x00E9;cessit&#x00E9; d&#x2019;associer davantage la fiscalit&#x00E9;&nbsp;&#x00E0; la transition &#x00E9;cologique, comme le souligne la Cour des comptes dans son rapport &#x00AB;&nbsp;Redistribution, innovation, lutte contre le changement climatique&nbsp;: trois enjeux fiscaux majeurs en sortie de crise sanitaire&nbsp;&#x00BB; (2022). Enfin, il compl&#x00E8;te utilement &nbsp;l&#x2019;&#x00E9;valuation du CIR men&#x00E9;e par le CNEPI et pourra servir &#x00E0; &#x00E9;clairer le Parlement&nbsp;quant &#x00E0; sa transformation &#x00E9;ventuelle en un &#x00AB;&nbsp;CIR vert&nbsp;&#x00BB; limit&#x00E9; aux&nbsp;d&#x00E9;penses de recherche favorables &#x00E0; l&#x2019;environnement.&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-10-20", "datePublication": "2024-11-15", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2024-10-30T00:35:33+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59048B0324P2D1N000120?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}