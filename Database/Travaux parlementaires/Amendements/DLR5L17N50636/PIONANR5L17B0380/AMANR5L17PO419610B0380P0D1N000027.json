{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419610B0380P0D1N000027", "chronotag": "1739874679884", "legislature": "17", "identification": {"numeroLong": "CE27", "numeroOrdreDepot": "27", "prefixeOrganeExamen": "CION-ECO", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419610B0380P0D1", "texteLegislatifRef": "PIONANR5L17B0380", "triAmendement": "caaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaas", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA793796", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA841017", "PA721486", "PA720976"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Taupiac,  M.&#160;Huwart, M.&#160;Naegelen et M.&#160;Mathiasin"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0380.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "4", "alineaDesignation": "Alin\u00e9a 4"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&nbsp;A l&#x2019;alin&#x00E9;a&nbsp;4, substituer au pourcentage&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;20&nbsp;%&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">le pourcentage&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;30&nbsp;%&nbsp;&#x00BB;. </p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement cantonne le champ de l&#x2019;article aux surfaces agricoles pr&#x00E9;sentant une pente sup&#x00E9;rieure ou &#x00E9;gale &#x00E0; 30 %. Il vise &#x00E0; mettre en ad&#x00E9;quation le champ de la p&#x00E9;renisation de l'exp&#x00E9;rimentation, avec l'exp&#x00E9;rimentation elle-m&#x00EA;me.&nbsp;</p><p style=\"text-align: justify;\">Alors que l'article 82 de la loi EGAlim autorisait, &#x00E0; titre exp&#x00E9;rimental, l'&#x00E9;pandage par dr&#x00F4;ne pour les cultures pr&#x00E9;sentant une pente sup&#x00E9;rieure ou &#x00E9;gale &#x00E0; 30%, cette proposition de loi &#x00E9;largit cette possibilit&#x00E9; aux cultures en pente de 20%.&nbsp;</p><p style=\"text-align: justify;\">Pourtant aucune &#x00E9;tude sur l'impact ou la n&#x00E9;cessit&#x00E9; d'ouvrir cette possibilit&#x00E9; aux parcelles en pente sup&#x00E9;rieure ou &#x00E9;gale &#x00E0; 20% n'a &#x00E9;t&#x00E9; r&#x00E9;alis&#x00E9;e. Les cons&#x00E9;quences d'une telle&nbsp;autorisation sur la sant&#x00E9; des riverains et sur l'environnement n'ont pas &#x00E9;t&#x00E9; &#x00E9;valu&#x00E9;es.&nbsp;</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-22", "datePublication": "2024-11-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-27T19:01:35+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419610B0380P0D1N000027?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "74356", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}