{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59051B0906P0D1N000019", "chronotag": "1742660307459", "legislature": "17", "identification": {"numeroLong": "CL19", "numeroOrdreDepot": "19", "prefixeOrganeExamen": "CION_LOIS", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59051B0906P0D1", "texteLegislatifRef": "PIONANR5L17B0906", "triAmendement": "iaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaao", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA720370", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA606507", "PA795990", "PA842311", "PA840235", "PA721296", "PA267200", "PA721134", "PA841601", "PA677483", "PA795046", "PA817203", "PA721584"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Mendes,  M.&#160;Boudi&#233;, Mme&#160;Bregeon, M.&#160;Caure, M.&#160;Fr&#233;bault, M.&#160;Gouffier&#160;Valente, M.&#160;Huyghe, M.&#160;Lescure, Mme&#160;Levasseur, M.&#160;Mazars, Mme&#160;Yadan, Mme&#160;Miller et M.&#160;Terlier"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 2", "articleDesignationCourte": "APR\u00c8S ART. 2", "articleDesignation": "APR\u00c8S L'ARTICLE 2, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0906.asp#D_Article_2"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": "Sous r\u00e9serve de son traitement par les services de l'Assembl\u00e9e nationale et de sa recevabilit\u00e9", "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apre&#x0300;s l&#x2019;article&nbsp;9&#x2011;1 de la loi n&#x00B0;&nbsp;2000&#x2011;614 du 5 juillet 2000 relative a&#x0300; l&#x2019;accueil et a&#x0300; l&#x2019;habitat des gens du voyage, il est inse&#x0301;re&#x0301; un article&nbsp;9&#x2011;1-2 ainsi re&#x0301;dige&#x0301;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;<i>Art.&nbsp;9&#x2011;1-2.</i>&nbsp;&#x2013;&nbsp;Il appartient aux repre&#x0301;sentants de l&#x2019;E&#x0301;tat d&#x2019;une part, de proce&#x0301;der a&#x0300; la nomination d&#x2019;un me&#x0301;diateur de&#x0301;partemental aupre&#x0300;s des gens du voyage nomme&#x0301; pour six ans, comme tous les membres de la commission de&#x0301;partementale consultative des gens du voyage, et qui y sie&#x0300;ge de plein droit.</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Ce me&#x0301;diateur est charge&#x0301; d&#x2019;intervenir en coordination avec la direction de&#x0301;partementale de la se&#x0301;curite&#x0301; publique et le groupement de gendarmerie de&#x0301;partementale d&#x2019;autre part, de proposer l&#x2019;engagement d&#x2019;une me&#x0301;diation interde&#x0301;partementale, le repre&#x0301;sentant de l&#x2019;E&#x0301;tat dans le de&#x0301;partement est l&#x2019;interlocuteur privile&#x0301;gie&#x0301; des maires, des pre&#x0301;sidents d&#x2019;e&#x0301;tablissements publics de coope&#x0301;ration intercommunale ainsi que des repre&#x0301;sentants des groupes des gens du voyage en termes de me&#x0301;diation, dont il lui revient strictement d&#x2019;assurer la coordination.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement propose d&#x2019;introduire un article pr&#x00E9;voyant que le pr&#x00E9;fet puisse nommer un m&#x00E9;diateur ainsi qu&#x2019;un r&#x00E9;f&#x00E9;rent au niveau d&#x00E9;partemental pour pr&#x00E9;venir et g&#x00E9;rer les &#x00E9;ventuels conflits susceptibles d&#x2019;intervenir entre communaut&#x00E9;s de gens du voyage, ou vis-&#x00E0;-vis des &#x00E9;lus, des collectivit&#x00E9;s, des riverains ou propri&#x00E9;taires priv&#x00E9;s, relatifs aux installations illicites, aux nuisances et autres troubles.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-20", "datePublication": "2025-03-22", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "ET", "libelle": "En traitement"}, "sousEtat": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "dateSort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "sort": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59051B0906P0D1N000019?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "loi 2000-614", "divisionCodeLoi": "9-1-2"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}