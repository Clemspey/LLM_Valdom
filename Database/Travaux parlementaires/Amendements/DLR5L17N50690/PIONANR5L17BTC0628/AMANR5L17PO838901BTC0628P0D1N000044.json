{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC0628P0D1N000044", "chronotag": "1739874709162", "legislature": "17", "identification": {"numeroLong": "44", "numeroOrdreDepot": "44", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC0628P0D1", "texteLegislatifRef": "PIONANR5L17BTC0628", "triAmendement": "taaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaam", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA721584", "groupePolitiqueRef": "PO845407", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Terlier"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 10", "articleDesignationCourte": "APR\u00c8S ART. 10", "articleDesignation": "APR\u00c8S L'ARTICLE 10, ins\u00e9rer l'article suivant:", "type": "ARTICLE", "avant_A_Apres": "Apr\u00e8s", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "true", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0628.asp#D_Article_10"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">&#x00C0; la premi&#x00E8;re phrase du premier alin&#x00E9;a de l&#x2019;article&nbsp;L.&nbsp;521&#x2011;11 du code de la justice p&#x00E9;nale des mineurs, les mots&nbsp;: &#x00AB;&nbsp;pour des faits ant&#x00E9;rieurs&nbsp;&#x00BB; sont supprim&#x00E9;s.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; &#x00E9;tendre la p&#x00E9;riode de mise &#x00E0; l&#x2019;&#x00E9;preuve &#x00E9;ducative d&#x00E9;j&#x00E0; ouverte pour un mineur &#x00E0; l&#x2019;ensemble des proc&#x00E9;dures dont est saisie ult&#x00E9;rieurement la juridiction. Cette modification est pr&#x00E9;conis&#x00E9;e par le rapport d&#x2019;&#x00E9;valuation sur la mise en &#x0153;uvre du code de la justice p&#x00E9;nale des mineurs du minist&#x00E8;re de la Justice.</p><p style=\"text-align: justify;\">&nbsp;</p><p style=\"text-align: justify;\">En effet, l&#x2019;article L.&nbsp;521&#x2011;11 du code de justice p&#x00E9;nale des mineurs, dans sa version actuelle, limite le recours &#x00E0; la mise &#x00E0; l&#x2019;&#x00E9;preuve &#x00E9;ducative &#x00E0; l&#x2019;hypoth&#x00E8;se de poursuites engag&#x00E9;es pour des faits post&#x00E9;rieurs &#x00E0; ceux ayant donn&#x00E9; lieu &#x00E0; l&#x2019;ouverture initiale de la mesure. L&#x2019;ordre des poursuites ne respecte cependant pas n&#x00E9;cessairement l&#x2019;ordre chronologique de commission des infractions compte tenu du d&#x00E9;lai de leur d&#x00E9;couverte, du temps de l&#x2019;enqu&#x00EA;te et du traitement judiciaire.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-28", "datePublication": "2025-02-13", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-02-13T10:48:30+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC0628P0D1N000044?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29023", "article99": "false", "loiReference": {"codeLoi": "c justice p\u00e9nale", "divisionCodeLoi": "L521-11"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "74680", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}