{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419865B0529P0D1N000138", "chronotag": "1739874680722", "legislature": "17", "identification": {"numeroLong": "CD138", "numeroOrdreDepot": "138", "prefixeOrganeExamen": "CION-DVP", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419865B0529P0D1", "texteLegislatifRef": "PRJLANR5L17B0529", "triAmendement": "iiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaastzi", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA722336", "groupePolitiqueRef": "PO845470", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Thi&#233;baut, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 27", "articleDesignationCourte": "ART. 27", "articleDesignation": "ARTICLE 27", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0529.asp#D_Article_27"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "80", "alineaDesignation": "Alin\u00e9a 80"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I.&nbsp;&#x2013;&nbsp;R&#x00E9;diger ainsi l&#x2019;alin&#x00E9;a&nbsp;80&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;<i>Art.&nbsp;L.&nbsp;236&#x2011;1.</i>&nbsp;&#x2013;&nbsp;I.&nbsp;&#x2013;&nbsp;Au sens du pr&#x00E9;sent chapitre, un centre de donn&#x00E9;es est d&#x00E9;fini comme une structure ou un groupe de structures servant &#x00E0; h&#x00E9;berger, connecter et exploiter des syst&#x00E8;mes ou serveurs informatiques et du mat&#x00E9;riel connexe pour le stockage, le traitement ou la distribution des donn&#x00E9;es ainsi que pour les activit&#x00E9;s connexes.</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Le pr&#x00E9;sent chapitre s&#x2019;applique &#x00E0; tous les centres de donn&#x00E9;es, notamment &#x00E0; ceux h&#x00E9;berg&#x00E9;s par les entreprises, les banques ou les centres de recherche, &#x00E0; l&#x2019;exception des dispositions du II du pr&#x00E9;sent article qui ne s&#x2019;appliquent pas aux centres de donn&#x00E9;es&nbsp;:&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;En cons&#x00E9;quence, &#x00E0; l&#x2019;alin&#x00E9;a&nbsp;83, substituer aux mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;salles de serveurs et des centres d&#x2019;exploitation informatique, d&#x00E9;nomm&#x00E9;s au sens et pour l&#x2019;application du pr&#x00E9;sent chapitre &#x00AB;&nbsp;centres de donn&#x00E9;es&nbsp;&#x00BB;,&nbsp;dont la puissance install&#x00E9;e&nbsp;&#x00BB;,</p><p style=\"text-align: justify;\">les mots&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;centres de donn&#x00E9;es dont la puissance install&#x00E9;e des salles de serveurs et des centres d&#x2019;exploitation informatique&nbsp;&#x00BB;. </p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Amendement reprenant la d&#x00E9;finition des centres de donn&#x00E9;es en droit europ&#x00E9;en (point 2.6.3.1.16 de l'annexe A du r&#x00E8;glement (CE) n&#x00B0; 1099/2008 du Parlement europ&#x00E9;en et du Conseil du 22 octobre 2008) et rectifiant une sous-transposition de l&#x2019;obligation de valoriser la chaleur fatale pour tenir compte des bonnes pratiques du code de conduite europ&#x00E9;en sur l&#x2019;efficacit&#x00E9; &#x00E9;nerg&#x00E9;tique des centres de donn&#x00E9;es.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-25", "datePublication": "2024-11-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-27T11:12:57+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419865B0529P0D1N000138?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}