{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO419865B0529P0D1N000147", "chronotag": "1739874681218", "legislature": "17", "identification": {"numeroLong": "CD147", "numeroOrdreDepot": "147", "prefixeOrganeExamen": "CION-DVP", "numeroRect": "0"}, "examenRef": "EXANR5L17PO419865B0529P0D1", "texteLegislatifRef": "PRJLANR5L17B0529", "triAmendement": "iiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaastzzw", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA722336", "groupePolitiqueRef": "PO845470", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Thi&#233;baut, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 27", "articleDesignationCourte": "ART. 27", "articleDesignation": "ARTICLE 27", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0529.asp#D_Article_27"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "98", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 98"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">I. &#x2013; Compl&#x00E9;ter cet article par les deux alin&#x00E9;as suivants&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;V.&nbsp;&#x2013;&nbsp;Les personnes morales nouvellement soumises aux obligations pr&#x00E9;vues aux 1&#x00B0;&nbsp;ou 2&#x00B0;&nbsp;du I de l&#x2019;article L.&nbsp;233&#x2011;1 du code de l&#x2019;&#x00E9;nergie, sur le fondement de sa r&#x00E9;daction ant&#x00E9;rieure &#x00E0; la loi n&#x00B0;&nbsp;du&nbsp; portant diverses dispositions d&#x2019;adaptation au droit de l&#x2019;Union europ&#x00E9;enne en mati&#x00E8;re &#x00E9;conomique, financi&#x00E8;re, environnementale, &#x00E9;nerg&#x00E9;tique, de transport, de sant&#x00E9; et de circulation des personnes, soit disposent d&#x2019;un syst&#x00E8;me de management de l&#x2019;&#x00E9;nergie certifi&#x00E9; au plus tard le 11 octobre 2027, soit r&#x00E9;alisent leur premier audit &#x00E9;nerg&#x00E9;tique au plus tard le 11 octobre 2026.</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;Les personnes morales qui entrent dans le champ des obligations pr&#x00E9;vues au I du m&#x00EA;me article apr&#x00E8;s les dates mentionn&#x00E9;es &#x00E0; l&#x2019;alin&#x00E9;a pr&#x00E9;c&#x00E9;dent s&#x2019;y soumettent dans l&#x2019;ann&#x00E9;e suivant les trois derni&#x00E8;res ann&#x00E9;es civiles pour lesquelles la moyenne de leur consommation d&#x2019;&#x00E9;nergie finale a &#x00E9;t&#x00E9; sup&#x00E9;rieure &#x00E0; l&#x2019;un des seuils mentionn&#x00E9;s au m&#x00EA;me I.&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">II.&nbsp;&#x2013;&nbsp;En cons&#x00E9;quence, supprimer les alin&#x00E9;as 27 &#x00E0; 30.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Amendement d&#x00E9;codifiant des dispositions transitoires et proc&#x00E9;dant &#x00E0; quelques corrections r&#x00E9;dactionnelles</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-25", "datePublication": "2024-11-27", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-27T11:25:22+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO419865B0529P0D1N000147?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}