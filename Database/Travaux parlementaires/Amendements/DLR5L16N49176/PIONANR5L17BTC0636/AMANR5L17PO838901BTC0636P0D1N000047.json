{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC0636P0D1N000047", "chronotag": "1739874703789", "legislature": "17", "identification": {"numeroLong": "47", "numeroOrdreDepot": "47", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC0636P0D1", "texteLegislatifRef": "PIONANR5L17BTC0636", "triAmendement": "loaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaal", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA721984", "groupePolitiqueRef": "PO845454", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA719558", "PA720256", "PA805166", "PA719024", "PA720162", "PA721336", "PA793520", "PA793716", "PA719914", "PA793122", "PA605694", "PA795120", "PA722284", "PA720560", "PA267318", "PA795258", "PA722374", "PA720038", "PA795374", "PA794702", "PA794114", "PA795100", "PA720728", "PA719640", "PA794810", "PA794830", "PA720334", "PA721182", "PA721234", "PA720720", "PA720092", "PA719822", "PA722162", "PA331582"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Latombe,  M.&#160;Balanant, Mme&#160;Bannier, Mme&#160;Bergantz, M.&#160;Blanchet, M.&#160;Bolo, Mme&#160;Brocard, M.&#160;Cosson, M.&#160;Croizier, Mme&#160;Darrieussecq, M.&#160;Daubi&#233;, M.&#160;Falorni, Mme&#160;Ferrari, M.&#160;Fuchs, Mme&#160;Perrine&#160;Goulet, M.&#160;Grelier, M.&#160;Gumbs, M.&#160;Isaac-Sibille, Mme&#160;Josso, M.&#160;Lecamp, Mme&#160;Lingemann, M.&#160;Mandon, M.&#160;Martineau, M.&#160;Mattei, Mme&#160;Mette, Mme&#160;Morel, M.&#160;Ott, M.&#160;Pahun, M.&#160;Fr&#233;d&#233;ric&#160;Petit, Mme&#160;Maud&#160;Petit, Mme&#160;Poueyto, M.&#160;Ramos, Mme&#160;Thillaye, M.&#160;Turquois et M.&#160;Philippe&#160;Vigier"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 17", "articleDesignationCourte": "ART. 17", "articleDesignation": "ARTICLE 17", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0636.asp#D_Article_17"}, "amendementStandard": {"alinea": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Supprimer cet article.</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement vise &#x00E0; supprimer l'article 17 qui pr&#x00E9;voit la communication automatique aux op&#x00E9;rateurs de transport public routier de la perte de permis de conduire d'un conducteur. Cette<br>mesure n'apparait en effet pas op&#x00E9;rationnelle dans la mesure o&#x00F9; l'autorit&#x00E9; judiciaire ou administrative qui suspendra, annulera ou interdira la d&#x00E9;livrance d'un permis de conduire n'a pas<br>n&#x00E9;cessairement connaissance de l'emploi de la personne vis&#x00E9;e. De plus, ce n'est pas &#x00E0; l'autorit&#x00E9; administrative ou judiciaire de communiquer une telle information &#x00E0; l'employeur, mais plut&#x00F4;t &#x00E0;<br>l'employeur de s'assurer r&#x00E9;guli&#x00E8;rement que ses conducteurs sont toujours titulaires d'un permis de conduire valide, en imposant par exemple dans leur r&#x00E8;glement int&#x00E9;rieur ou dans les contrats de travail, une obligation pour le salari&#x00E9; de prouver r&#x00E9;guli&#x00E8;rement qu'il poss&#x00E8;de toujours son permis de conduire.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-01-30", "datePublication": "2025-02-11", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Rejet\u00e9"}}, "dateSort": "2025-02-11T23:03:34+01:00", "sort": "Rejet\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC0636P0D1N000047?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29020", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "75542", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}