{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO420120B0203P0D1N000023", "chronotag": "1739874520075", "legislature": "17", "identification": {"numeroLong": "AS23", "numeroOrdreDepot": "23", "prefixeOrganeExamen": "CION-SOC", "numeroRect": "0"}, "examenRef": "EXANR5L17PO420120B0203P0D1", "texteLegislatifRef": "PIONANR5L17B0203", "triAmendement": "biaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaci", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "Rapporteur", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA793708", "groupePolitiqueRef": "PO845439", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Peytavie, rapporteur"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article PREMIER", "articleDesignationCourte": "ART. PREMIER", "articleDesignation": "ARTICLE PREMIER", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0203.asp#D_Article_1er"}, "amendementStandard": {"alinea": {"avant_A_Apres": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "numero": "6", "alineaDesignation": "Alin\u00e9a 6"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Substituer &#x00E0; l&#x2019;alin&#x00E9;a&nbsp;6 les cinq alin&#x00E9;as suivants&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;III.&nbsp;&#x2013;&nbsp;Un observatoire du march&#x00E9; et des prix des aides techniques, sous l&#x2019;&#x00E9;gide de la Caisse nationale de solidarit&#x00E9; pour l&#x2019;autonomie, a pour missions&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;1&#x00B0;&nbsp;De recenser l&#x2019;offre et la disponibilit&#x00E9; des aides techniques sur le territoire, d&#x2019;informer sur la formation des prix et de suivre leur &#x00E9;volution&nbsp;;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;2&#x00B0;&nbsp;De cartographier les acteurs et les structures intervenant dans l&#x2019;&#x00E9;valuation des besoins et l&#x2019;accompagnement des personnes utilisatrices d&#x2019;aides techniques&nbsp;;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;3&#x00B0;&nbsp;De contribuer au d&#x00E9;veloppement de la recherche sur les aides techniques et de faire l&#x2019;&#x00E9;tat des lieux des innovations technologiques&nbsp;;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;4&#x00B0;&nbsp;D&#x2019;&#x00E9;valuer les perspectives de d&#x00E9;veloppement des dispositifs de remise en bon &#x00E9;tat d&#x2019;usage des aides techniques et de proposer des &#x00E9;volutions relatives &#x00E0; la d&#x00E9;finition des normes de qualit&#x00E9;.&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Le pr&#x00E9;sent amendement apporte des clarifications r&#x00E9;dactionnelles au dispositif dressant la liste des missions de l&#x2019;observatoire du march&#x00E9; et des prix des aides techniques.</p><p style=\"text-align: justify;\">Dans le d&#x00E9;tail, il s&#x2019;agira, pour celui-ci&nbsp;:</p><p style=\"text-align: justify;\">&#x2013;&nbsp;de recenser l&#x2019;offre et la disponibilit&#x00E9; des aides techniques sur le territoire, d&#x2019;informer sur la formation des prix et de suivre leur &#x00E9;volution&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;de cartographier les acteurs et les structures intervenant dans l&#x2019;&#x00E9;valuation des besoins et l&#x2019;accompagnement des personnes utilisatrices de fauteuils roulants&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;de contribuer au d&#x00E9;veloppement de la recherche sur les aides techniques et de faire l&#x2019;&#x00E9;tat des lieux des innovations technologiques en la mati&#x00E8;re&nbsp;;</p><p style=\"text-align: justify;\">&#x2013;&nbsp;d&#x2019;&#x00E9;valuer les perspectives de d&#x00E9;veloppement des dispositifs de remise en bon &#x00E9;tat d&#x2019;usage des aides techniques et de proposer des &#x00E9;volutions relatives &#x00E0; la d&#x00E9;finition des normes de qualit&#x00E9;.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2024-11-26", "datePublication": "2024-11-26", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2024-11-26T20:01:10+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO420120B0203P0D1N000023?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}