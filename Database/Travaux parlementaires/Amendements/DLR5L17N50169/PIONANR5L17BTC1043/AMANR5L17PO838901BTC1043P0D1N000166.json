{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1043P0D1N000166", "chronotag": "1742424253091", "legislature": "17", "identification": {"numeroLong": "166", "numeroOrdreDepot": "166", "prefixeOrganeExamen": "AN", "numeroRect": "0"}, "examenRef": "EXANR5L17PO838901BTC1043P0D1", "texteLegislatifRef": "PIONANR5L17BTC1043", "triAmendement": "aecaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaato", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA822617", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA607619", "PA267763", "PA840817", "PA794554", "PA719286", "PA942", "PA720976", "PA267042", "PA795244", "PA841931", "PA793210", "PA721110", "PA721474"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Froger,  M.&#160;Molac, M.&#160;Bataille, M.&#160;Bruneau, M.&#160;Castiglione, M.&#160;Colombani, M.&#160;de&#160;Courson, M.&#160;Mathiasin, M.&#160;Favennec-B&#233;cot, M.&#160;Lenormand, M.&#160;Mazaury, M.&#160;Panifous, Mme&#160;Sanquer et M.&#160;Viry"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 23 quinquies", "articleDesignationCourte": "ART. 23 QUINQUIES", "articleDesignation": "ARTICLE 23 QUINQUIES", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1043.asp#D_Article_23_quinquies"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "16", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 16"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;16, ins&#x00E9;rer l&#x2019;alin&#x00E9;a suivant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;<i>Art.&nbsp;L.&nbsp;224&#x2011;8&#x2011;1.</i>&nbsp;&#x2013;&nbsp;Les agents de l&#x2019;administration p&#x00E9;nitentiaire affect&#x00E9;s au sein de quartiers de lutte contre la criminalit&#x00E9; organis&#x00E9;e interviennent dans des conditions qui garantissent la pr&#x00E9;servation de leur anonymat. Ils peuvent &#x00EA;tre autoris&#x00E9;s par le chef de l&#x2019;&#x00E9;tablissement p&#x00E9;nitentiaire &#x00E0; ne pas &#x00EA;tre identifi&#x00E9;s par leurs nom et pr&#x00E9;nom lorsque la r&#x00E9;v&#x00E9;lation de leur identit&#x00E9; est susceptible, compte tenu des conditions d&#x2019;exercice de leur mission ou de la nature des proc&#x00E9;dures pour lesquelles ils sont requis, de mettre en danger leur vie ou leur int&#x00E9;grit&#x00E9; physique ou celles de leurs proches.&nbsp;&#x00BB;</p><p style=\"text-align: justify;\">&nbsp;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement pr&#x00E9;voit&nbsp;des garanties pour pr&#x00E9;server l&#x2019;identit&#x00E9; des agents de l&#x2019;administration p&#x00E9;nitentiaire affect&#x00E9;s dans les nouveaux quartiers de lutte contre la criminalit&#x00E9; organis&#x00E9;e.&nbsp;</p><p style=\"text-align: justify;\">Les missions des personnels de surveillance des prisons, en particulier dans les quartiers s&#x00E9;curis&#x00E9;s, sont susceptibles de les exposer &#x00E0; des risques pour leur s&#x00E9;curit&#x00E9; et pour leurs proches ainsi qu&#x2019;&#x00E0; des repr&#x00E9;sailles. Cet amendement propose donc de permettre au chef de l&#x2019;&#x00E9;tablissement p&#x00E9;nitentiaire concern&#x00E9; de pr&#x00E9;voir des mesures d&#x2019;anonymat pour ces agents.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-13", "datePublication": "2025-03-19", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-03-19T23:44:06+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1043P0D1N000166?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29210", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}