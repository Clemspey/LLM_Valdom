{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO838901BTC1043P0D1N000167", "chronotag": "1742423533107", "legislature": "17", "identification": {"numeroLong": "167 (2\u00e8me Rect)", "numeroOrdreDepot": "167", "prefixeOrganeExamen": "AN", "numeroRect": "2"}, "examenRef": "EXANR5L17PO838901BTC1043P0D1", "texteLegislatifRef": "PIONANR5L17BTC1043", "triAmendement": "aecaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaatc", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA719286", "groupePolitiqueRef": "PO845485", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA607619", "PA267763", "PA840817", "PA794554", "PA942", "PA720976", "PA267042", "PA822617", "PA795244", "PA841931", "PA793210", "PA721110", "PA721474"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "M.&#160;Colombani,  M.&#160;Molac, M.&#160;Bataille, M.&#160;Bruneau, M.&#160;Castiglione, M.&#160;de&#160;Courson, M.&#160;Mathiasin, M.&#160;Favennec-B&#233;cot, Mme&#160;Froger, M.&#160;Lenormand, M.&#160;Mazaury, M.&#160;Panifous, Mme&#160;Sanquer et M.&#160;Viry"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 23 quinquies", "articleDesignationCourte": "ART. 23 QUINQUIES", "articleDesignation": "ARTICLE 23 QUINQUIES", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/1043.asp#D_Article_23_quinquies"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "16", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 16"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Apr&#x00E8;s l&#x2019;alin&#x00E9;a&nbsp;16, ins&#x00E9;rer l&#x2019;alin&#x00E9;a suivant&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;<i>Art.&nbsp;L.&nbsp;224&#x2011;8-1.</i> &#x2013;&nbsp; Les dispositions de la pr&#x00E9;sente section ne sont pas applicables aux d&#x00E9;tenus b&#x00E9;n&#x00E9;ficiant du statut de collaborateurs de justice mentionn&#x00E9;s aux titre XXI <i>bis</i> du livre IV du code de proc&#x00E9;dure p&#x00E9;nale en application de l&#x2019;article&nbsp;706&#x2011;63&#x2011;1-A du code de proc&#x00E9;dure p&#x00E9;nale ou ayant b&#x00E9;n&#x00E9;fici&#x00E9; de ce statut dans le cadre de la proc&#x00E9;dure pour laquelle ils ex&#x00E9;cutent leur peine, sauf en cas de mise &#x00E0; ex&#x00E9;cution par le tribunal de l&#x2019;application des peines de tout ou partie de l&#x2019;emprisonnement d&#x00E9;cid&#x00E9; en application de l&#x2019;article&nbsp;132&#x2011;78&#x2011;1 du code p&#x00E9;nal.&nbsp;&#x00BB;&nbsp;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p style=\"text-align: justify;\">Cet amendement vise &#x00E0; exclure des quartiers de lutte contre la criminalit&#x00E9; organis&#x00E9;e&nbsp;les &#x00AB;&nbsp;collaborateurs de justice&nbsp;&#x00BB;. Ces quartiers auront vocation &#x00E0; accueillir certains d&#x00E9;tenus en raison de leur profil, de leur dangerosit&#x00E9; et de leurs liens avec le crime organis&#x00E9;. Dans ces conditions, il n&#x2019;est pas souhaitable de permettre au garde des Sceaux de d&#x00E9;cider de placer une personne ayant coop&#x00E9;r&#x00E9; avec le syst&#x00E8;me judiciaire&nbsp;dans un de ces quartiers. Un tel placement porterait un risque pour sa s&#x00E9;curit&#x00E9; et surtout pourrait, dans l&#x2019;avenir, dissuader certains individus de coop&#x00E9;rer avec la justice.</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-03-13", "datePublication": "2025-03-18", "soumisArticle40": "true", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Adopt\u00e9"}}, "dateSort": "2025-03-19T23:31:52+01:00", "sort": "Adopt\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO838901BTC1043P0D1N000167?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": "RUANR5L17S2025IDS29210", "article99": "false", "loiReference": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"idDiscussion": "76114", "typePosition": "Premier"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}