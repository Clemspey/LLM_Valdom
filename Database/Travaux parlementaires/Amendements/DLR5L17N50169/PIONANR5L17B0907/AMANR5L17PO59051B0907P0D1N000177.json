{"amendement": {"@xmlns": "http://schemas.assemblee-nationale.fr/referentiel", "uid": "AMANR5L17PO59051B0907P0D1N000177", "chronotag": "1741282465811", "legislature": "17", "identification": {"numeroLong": "CL177", "numeroOrdreDepot": "177", "prefixeOrganeExamen": "CION_LOIS", "numeroRect": "0"}, "examenRef": "EXANR5L17PO59051B0907P0D1", "texteLegislatifRef": "PIONANR5L17B0907", "triAmendement": "esaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaeo", "cardinaliteAmdtMultiples": "1", "amendementParentRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "signataires": {"auteur": {"typeAuteur": "D\u00e9put\u00e9", "gouvernementRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "acteurRef": "PA794778", "groupePolitiqueRef": "PO845439", "auteurRapporteurOrganeRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "cosignataires": {"acteurRef": ["PA610968", "PA841701", "PA841351", "PA794022"]}, "suffixe": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "libelle": "Mme&#160;Regol,  M.&#160;Amirshahi, Mme&#160;Balage&#160;El&#160;Mariky, M.&#160;Duplessy et M.&#160;Iordanoff"}, "pointeurFragmentTexte": {"partieAmendableRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "division": {"titre": "Article 14", "articleDesignationCourte": "ART. 14", "articleDesignation": "ARTICLE 14", "type": "ARTICLE", "avant_A_Apres": "A", "divisionRattachee": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "articleAdditionnel": "false", "chapitreAdditionnel": "false", "urlDivisionTexteVise": "/17/textes/0907.asp#D_Article_14"}, "amendementStandard": {"alinea": {"avant_A_Apres": "Apres", "numero": "68", "alineaDesignation": "Apr\u00e8s l'alin\u00e9a 68"}}}, "corps": {"cartoucheInformatif": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenuAuteur": {"dispositif": "<p style=\"text-align: justify;\">Compl&#x00E9;ter cet article par les deux alin&#x00E9;as suivants&nbsp;:&nbsp;</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;4&#x00B0;&nbsp;Il est ajout&#x00E9; un article&nbsp;706&#x2011;63&#x2011;3 ainsi r&#x00E9;dig&#x00E9;&nbsp;:</p><p style=\"text-align: justify;\">&#x00AB;&nbsp;&#x00AB;&nbsp;Art.&nbsp;706&#x2011;63&#x2011;3.&nbsp;&#x2013;&nbsp;La personne b&#x00E9;n&#x00E9;ficiant d&#x2019;une r&#x00E9;duction de peine dans le cadre de l&#x2019;article&nbsp;132&#x2011;78 du code p&#x00E9;nal est incarc&#x00E9;r&#x00E9;e&nbsp;dans un &#x00E9;tablissement p&#x00E9;nitentiaire dans lequel n&#x2019;est incarc&#x00E9;r&#x00E9;&nbsp;aucun auteur, coauteur ou complice d&#x2019;une infraction vis&#x00E9;e au 1&#x00B0;&nbsp;du III de l&#x2019;article&nbsp;706&#x2011;63&#x2011;1 B ni aucune personne susceptible de l&#x2019;exposer &#x00E0; des intimidations, menaces ou violences en raison des r&#x00E9;v&#x00E9;lations faites &#x00E0; l&#x2019;autorit&#x00E9; judiciaire&nbsp;dans sa&nbsp;d&#x00E9;claration, notamment en raison de son appartenance pr&#x00E9;sente ou pass&#x00E9;e&nbsp;&#x00E0; une&nbsp;entit&#x00E9; ou structure constitu&#x00E9;e en vue de commettre une ou plusieurs infractions dont la personne b&#x00E9;n&#x00E9;ficiant d&#x2019;une r&#x00E9;duction de peine a &#x00E9;t&#x00E9; membre.&nbsp;&#x00BB;&nbsp;&#x00BB;</p>", "avantAppel": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "exposeSommaire": "<p>Cet amendement des d&#x00E9;put&#x00E9;-es &#x00E9;cologistes vise &#x00E0; mieux prot&#x00E9;ger les repentis condamn&#x00E9;s &#x00E0; une peine de prison. En effet, il s&#x2019;agit de garantir leur s&#x00E9;curit&#x00E9; et d&#x2019;&#x00E9;viter des repr&#x00E9;sailles ou vengeances en s&#x2019;assurant qu&#x2019;ils ne peuvent &#x00EA;tre d&#x00E9;tenus dans le m&#x00EA;me &#x00E9;tablissement p&#x00E9;nitentiaire que des personnes qu&#x2019;ils auraient contribu&#x00E9; &#x00E0; faire condamner ou que des personnes ayant particip&#x00E9; &#x00E0; la m&#x00EA;me structure criminelle qu&#x2019;eux.</p><p>&nbsp;</p>", "annexeExposeSommaire": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "cycleDeVie": {"dateDepot": "2025-02-28", "datePublication": "2025-03-05", "soumisArticle40": "false", "etatDesTraitements": {"etat": {"code": "DI", "libelle": "Discut\u00e9"}, "sousEtat": {"code": "DI", "libelle": "Tomb\u00e9"}}, "dateSort": "2025-03-06T18:33:58+01:00", "sort": "Tomb\u00e9"}, "representations": {"representation": {"nom": "PDF", "typeMime": {"type": "application", "subType": "PDF"}, "statutRepresentation": {"verbatim": "true", "canonique": "true", "officielle": "true", "transcription": "false", "enregistrement": "false"}, "repSource": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "offset": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "contenu": {"documentURI": "/base/AMANR5L17PO59051B0907P0D1N000177?format=pdf"}, "dateDispoRepresentation": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}}, "seanceDiscussionRef": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "article99": "false", "loiReference": {"codeLoi": "2", "divisionCodeLoi": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}}, "discussionCommune": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "discussionIdentique": {"@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance", "@xsi:nil": "true"}, "accordGouvernementDepotHorsDelai": "Sans objet"}}